<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- 主蓝色渐变背景 - 确保覆盖整个区域 -->
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:type="linear"
                android:angle="270"
                android:startColor="#4A90E2"
                android:centerColor="#5BA3F5"
                android:endColor="#6BB6FF" />
        </shape>
    </item>
    
    <!-- 顶部深化效果 - 让状态栏区域更深一些 -->
    <item android:height="40dp">
        <shape android:shape="rectangle">
            <gradient
                android:type="linear"
                android:angle="270"
                android:startColor="#3A80D2"
                android:centerColor="#4A90E2"
                android:endColor="#00000000" />
        </shape>
    </item>
</layer-list>
