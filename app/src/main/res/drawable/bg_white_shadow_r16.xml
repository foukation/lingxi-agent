<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- 阴影层 -->
    <item
        android:left="4dp"
        android:right="4dp"
        android:top="4dp"
        android:bottom="4dp">
        <shape android:shape="rectangle">
            <solid android:color="#33000000" /> <!-- 半透明黑色作为阴影 -->
            <corners android:radius="16dp" />
        </shape>
    </item>
    <!-- 背景层 -->
    <item
        android:left="2dp"
        android:right="2dp"
        android:top="2dp"
        android:bottom="2dp">
        <shape android:shape="rectangle">
            <solid android:color="#FFFFFF" /> <!-- 白色背景 -->
            <corners android:radius="16dp" />
        </shape>
    </item>
</layer-list>




