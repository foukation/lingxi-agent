<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Base gradient matching Figma 170.51 degree -->
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:type="linear"
                android:angle="170"
                android:startColor="#E6F2FA"
                android:centerColor="#F9FDFF"
                android:endColor="#00FFFFFF" />
        </shape>
    </item>
    
    <!-- First ellipse: Blue gradient with blur effect simulation -->
    <!-- Position: left: 18.85%, top: -12.74%, opacity: 0.6 -->
    <item
        android:left="70dp"
        android:top="-32dp">
        <shape android:shape="oval">
            <size
                android:width="304dp"
                android:height="142dp" />
            <gradient
                android:type="radial"
                android:gradientRadius="180dp"
                android:centerColor="#99A1BAFF"
                android:endColor="#32B0F2FF" />
        </shape>
    </item>
    
    <!-- Second ellipse: Purple with 21 degree rotation simulation -->
    <!-- Position: left: -20.34%, top: -48.75%, opacity: 0.3 -->
    <item
        android:left="-76dp"
        android:top="-122dp">
        <shape android:shape="oval">
            <size
                android:width="213dp"
                android:height="248dp" />
            <solid android:color="#4DBFB0FF" />
        </shape>
    </item>
    
    <!-- Additional overlay for better color blending -->
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:type="linear"
                android:angle="170"
                android:startColor="#10E6F2FA"
                android:endColor="#00FFFFFF" />
        </shape>
    </item>
</layer-list>