<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#33000000">

    <!-- Dialog Container -->
    <LinearLayout
        android:layout_width="328dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="vertical"
        android:background="@drawable/bg_dialog_white_rounded_16dp"
        android:padding="24dp">

        <!-- Content Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center">

            <!-- Text Frame Container -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_gravity="center">

                <!-- Title Text -->
                <TextView
                    android:id="@+id/tv_dialog_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="返回将不保存当前会议内容"
                    android:textColor="#1E1E1E"
                    android:textSize="18sp"
                    android:fontFamily="sans-serif-medium"
                    android:lineSpacingMultiplier="1.5"
                    android:gravity="center"
                    android:layout_marginBottom="8dp" />

                <!-- Subtitle Text -->
                <TextView
                    android:id="@+id/tv_dialog_subtitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="请确认是否退出"
                    android:textColor="#1E1E1E"
                    android:textSize="14sp"
                    android:fontFamily="sans-serif"
                    android:lineSpacingMultiplier="1.7"
                    android:gravity="center" />

            </LinearLayout>

        </LinearLayout>

        <!-- Button Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="20dp">

            <!-- Cancel Button -->
            <LinearLayout
                android:id="@+id/btn_cancel"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:gravity="center"
                android:background="@drawable/bg_button_gray_rounded_8dp"
                android:paddingTop="8dp"
                android:paddingBottom="8dp"
                android:paddingStart="12dp"
                android:paddingEnd="12dp"
                android:layout_marginEnd="6dp"
                android:clickable="true"
                android:focusable="true">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="取消"
                    android:textColor="#1E1E1E"
                    android:textSize="16sp"
                    android:fontFamily="sans-serif"
                    android:lineSpacingMultiplier="1.4"
                    android:gravity="center" />

            </LinearLayout>

            <!-- Exit Button -->
            <LinearLayout
                android:id="@+id/btn_exit"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:gravity="center"
                android:background="@drawable/bg_button_gray_rounded_8dp"
                android:paddingTop="8dp"
                android:paddingBottom="8dp"
                android:paddingStart="12dp"
                android:paddingEnd="12dp"
                android:layout_marginStart="6dp"
                android:clickable="true"
                android:focusable="true">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="退出"
                    android:textColor="#1C77FF"
                    android:textSize="16sp"
                    android:fontFamily="sans-serif"
                    android:lineSpacingMultiplier="1.4"
                    android:gravity="center" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</FrameLayout>