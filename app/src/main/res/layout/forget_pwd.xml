<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <!-- 顶部返回按钮 -->
    <ImageView
        android:id="@+id/iv_back"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="57dp"
        android:src="@drawable/ic_back_arrow_register"
        android:background="?android:attr/selectableItemBackgroundBorderless" />

    <!-- 标题 -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="58dp"
        android:text="忘记密码"
        android:textColor="#1E1E1E"
        android:textSize="16sp"
        android:textStyle="bold" />

    <!-- 主要内容区域 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="120dp"
        android:orientation="vertical"
        android:paddingStart="34dp"
        android:paddingEnd="34dp">

        <!-- 手机号输入框 -->
        <EditText
            android:id="@+id/et_phone"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:hint="请输入手机号"
            android:inputType="phone"
            android:textSize="14sp"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:background="@drawable/bg_register_input"
            android:textColor="#1E1E1E"
            android:textColorHint="#B2B2B2" />

        <!-- 验证码输入框 -->
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginTop="20dp">

            <EditText
                android:id="@+id/et_verification"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:hint="请输入验证码"
                android:inputType="number"
                android:textSize="14sp"
                android:paddingStart="16dp"
                android:paddingEnd="110dp"
                android:background="@drawable/bg_register_input"
                android:textColor="#1E1E1E"
                android:textColorHint="#B2B2B2" />

            <TextView
                android:id="@+id/tv_get_code"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end|center_vertical"
                android:layout_marginEnd="10dp"
                android:text="获取验证码"
                android:textColor="#1E1E1E"
                android:textSize="12sp"
                android:gravity="center"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:paddingTop="6dp"
                android:paddingBottom="6dp"
                android:background="@drawable/bg_get_code" />
        </FrameLayout>

        <!-- 新密码输入框 -->
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginTop="20dp">

            <EditText
                android:id="@+id/et_new_password"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:hint="请输入新密码"
                android:inputType="textPassword"
                android:textSize="14sp"
                android:paddingStart="16dp"
                android:paddingEnd="48dp"
                android:background="@drawable/bg_register_input"
                android:textColor="#1E1E1E"
                android:textColorHint="#B2B2B2" />

            <ImageView
                android:id="@+id/iv_toggle_password"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:layout_gravity="end|center_vertical"
                android:layout_marginEnd="16dp"
                android:src="@drawable/selector_password_visibility"
                android:background="?android:attr/selectableItemBackgroundBorderless" />
        </FrameLayout>

        <!-- 确认新密码输入框 -->
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginTop="20dp">

            <EditText
                android:id="@+id/et_confirm_password"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:hint="请确认新密码"
                android:inputType="textPassword"
                android:textSize="14sp"
                android:paddingStart="16dp"
                android:paddingEnd="48dp"
                android:background="@drawable/bg_register_input"
                android:textColor="#1E1E1E"
                android:textColorHint="#B2B2B2" />

            <ImageView
                android:id="@+id/iv_toggle_confirm_password"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:layout_gravity="end|center_vertical"
                android:layout_marginEnd="16dp"
                android:src="@drawable/selector_password_visibility"
                android:background="?android:attr/selectableItemBackgroundBorderless" />
        </FrameLayout>

        <!-- 重置密码按钮 -->
        <Button
            android:id="@+id/btn_reset_password"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginTop="50dp"
            android:text="重置密码"
            android:textColor="@android:color/white"
            android:textSize="16sp"
            android:background="@drawable/bg_register_button"
            android:enabled="false"
            android:alpha="0.4" />

    </LinearLayout>

    <!-- 进度条 -->
    <ProgressBar
        android:id="@+id/progressBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:visibility="gone" />

</FrameLayout>