<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/code_background">

    <!-- 顶部工具栏 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:orientation="horizontal"
        android:background="@color/code_header_background"
        android:elevation="4dp"
        android:gravity="center_vertical"
        android:paddingStart="16dp"
        android:paddingEnd="16dp">

        <!-- 返回按钮 -->
        <androidx.cardview.widget.CardView
            android:id="@+id/cv_back"
            android:layout_width="32dp"
            android:layout_height="32dp"
            app:cardCornerRadius="6dp"
            app:cardElevation="0dp"
            app:cardBackgroundColor="@color/code_button_background"
            android:foreground="?android:attr/selectableItemBackground">

            <ImageView
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:layout_gravity="center"
                android:src="@drawable/ic_back_24"
                android:contentDescription="返回" />

        </androidx.cardview.widget.CardView>

        <!-- 表格图标 -->
        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="8dp"
            android:src="@drawable/ic_table_chart"
            android:contentDescription="表格图标" />

        <!-- 标题 -->
        <TextView
            android:id="@+id/tv_table_title_fullscreen"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="表格"
            android:textSize="18sp"
            android:textColor="@color/code_text"
            android:fontFamily="sans-serif-medium"
            android:textStyle="bold" />

        <!-- 复制按钮 -->
        <androidx.cardview.widget.CardView
            android:id="@+id/cv_copy_fullscreen"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_marginEnd="8dp"
            app:cardCornerRadius="6dp"
            app:cardElevation="0dp"
            app:cardBackgroundColor="@color/code_button_background"
            android:foreground="?android:attr/selectableItemBackground">

            <ImageView
                android:id="@+id/iv_copy_fullscreen"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:layout_gravity="center"
                android:src="@drawable/ic_copy_modern"
                android:contentDescription="复制表格" />

        </androidx.cardview.widget.CardView>

        <!-- 分享按钮 -->
        <androidx.cardview.widget.CardView
            android:id="@+id/cv_share"
            android:layout_width="32dp"
            android:layout_height="32dp"
            app:cardCornerRadius="6dp"
            app:cardElevation="0dp"
            app:cardBackgroundColor="@color/code_button_background"
            android:foreground="?android:attr/selectableItemBackground">

            <ImageView
                android:id="@+id/iv_share"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:layout_gravity="center"
                android:src="@drawable/ic_share"
                android:contentDescription="分享表格" />

        </androidx.cardview.widget.CardView>

    </LinearLayout>

    <!-- 表格内容区域 - 横屏优化 -->
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@color/code_header_background"
        android:padding="16dp">

        <!-- 表格容器 - 白色背景框 -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:cardCornerRadius="12dp"
            app:cardElevation="2dp"
            app:cardBackgroundColor="@color/code_background"
            app:strokeWidth="1dp"
            app:strokeColor="@color/code_border">

            <!-- 表格内容 - 支持双向滚动 -->
            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fillViewport="true"
                android:scrollbars="vertical"
                android:fadeScrollbars="false">

                <HorizontalScrollView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fillViewport="true"
                    android:scrollbars="horizontal"
                    android:fadeScrollbars="false">

                    <!-- 表格内容容器 -->
                    <FrameLayout
                        android:id="@+id/table_content_container"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="16dp"
                        android:background="@color/code_background" />

                </HorizontalScrollView>

            </ScrollView>

        </androidx.cardview.widget.CardView>

    </FrameLayout>

</LinearLayout>
