<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:id="@+id/root_view"
    android:paddingTop="12dp"
    android:paddingBottom="5dp"
    android:paddingLeft="12dp"
    android:paddingRight="12dp"
    android:layout_marginLeft="16dp"
    android:layout_marginRight="16dp"
    android:layout_marginTop="8dp"
    android:layout_marginBottom="8dp"
    android:gravity="start"
    android:background="@drawable/bg_f7_r16"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/ll_thinking"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="8dp"
            android:visibility="visible"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/ll_thinking_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                >

                <TextView
                    android:id="@+id/tv_thinking_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="思考中"
                    android:textSize="14sp"
                    android:textColor="@color/text_hint_color"
                    />
                <ImageView
                    android:id="@+id/iv_thinking_dash"
                    android:layout_width="36dp"
                    android:layout_height="24dp"
                    android:background="@mipmap/thinking_dash"
                    />
                <ImageView
                    android:id="@+id/iv_thinking_arrow"
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:layout_marginLeft="10dp"
                    android:backgroundTint="@color/text_hint_color"
                    android:background="@mipmap/home_down_arrow"
                    />
            </LinearLayout>
            <ImageView
                android:id="@+id/iv_chat_think_start"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_marginTop="16dp"
                android:background="@mipmap/chat_think_start"
                android:visibility="gone"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="5dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_thinking"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:text="asdajslkdjaslkasdajslkdjaslkasdajslkdjaslkasdajslkdjaslkasdajslkdjaslkasdajslkdjaslkasdajslkdjaslkasdajslkdjaslkasdajslkdjaslkasdajslkdjaslkasdajslkdjaslkasdajslkdjaslkasdajslkdjaslkasdajslkdjaslkasdajslkdjaslkasdajslkdjaslk"
                    android:textSize="14sp"
                    android:textColor="@color/text_hint_color"/>
            </LinearLayout>

        </LinearLayout>

        <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recycler_view_ai"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:nestedScrollingEnabled="false"
                android:overScrollMode="never"
                android:scrollbars="none"
                android:clipToPadding="false"
                android:paddingTop="0dp"
                android:paddingBottom="0dp"
                android:paddingLeft="0dp"
                android:paddingRight="0dp"/>

        <LinearLayout
            android:id="@+id/ll_actions"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="10dp"
            android:visibility="gone"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#E0E0E0"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="10dp"
                >
                <ImageView
                    android:id="@+id/iv_chat_copy"
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:background="@mipmap/chat_copy"
                    />

                <ImageView
                    android:id="@+id/iv_chat_play"
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:background="@mipmap/chat_tts"
                    android:layout_marginLeft="10dp"
                    />


                <ImageView
                    android:id="@+id/iv_chat_share"
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:background="@mipmap/chat_share"
                    android:layout_marginLeft="10dp"
                    />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content">

                </LinearLayout>
                <ImageView
                    android:id="@+id/iv_chat_refresh"
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:background="@mipmap/chat_refresh"
                    android:layout_marginLeft="10dp"
                    />
                <ImageView
                    android:id="@+id/iv_chat_export"
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:background="@mipmap/chat_export"
                    android:layout_marginLeft="10dp"
                    android:visibility="gone"
                    />
            </LinearLayout>


        </LinearLayout>
    </LinearLayout>


</LinearLayout>
