<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/code_background">

    <!-- 顶部工具栏 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:orientation="horizontal"
        android:background="@color/code_header_background"
        android:elevation="4dp"
        android:gravity="center_vertical"
        android:paddingStart="16dp"
        android:paddingEnd="16dp">

        <!-- 返回按钮 -->
        <androidx.cardview.widget.CardView
            android:id="@+id/cv_back"
            android:layout_width="32dp"
            android:layout_height="32dp"
            app:cardCornerRadius="6dp"
            app:cardElevation="0dp"
            app:cardBackgroundColor="@color/code_button_background"
            android:foreground="?android:attr/selectableItemBackground">

            <ImageView
                android:id="@+id/iv_back"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:layout_gravity="center"
                android:src="@drawable/ic_back_24"
                android:contentDescription="返回" />

        </androidx.cardview.widget.CardView>

        <!-- 语言标签 -->
        <TextView
            android:id="@+id/tv_language_fullscreen"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginStart="16dp"
            android:text="Python"
            android:textSize="16sp"
            android:textColor="@color/code_text"
            android:fontFamily="monospace"
            android:textStyle="bold"
            android:textAllCaps="true" />

        <!-- 复制按钮 -->
        <androidx.cardview.widget.CardView
            android:id="@+id/cv_copy_fullscreen"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_marginEnd="8dp"
            app:cardCornerRadius="6dp"
            app:cardElevation="0dp"
            app:cardBackgroundColor="@color/code_button_background"
            android:foreground="?android:attr/selectableItemBackground">

            <ImageView
                android:id="@+id/iv_copy_fullscreen"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:layout_gravity="center"
                android:src="@drawable/ic_copy_modern"
                android:contentDescription="复制代码" />

        </androidx.cardview.widget.CardView>

        <!-- 分享按钮 -->
        <androidx.cardview.widget.CardView
            android:id="@+id/cv_share"
            android:layout_width="32dp"
            android:layout_height="32dp"
            app:cardCornerRadius="6dp"
            app:cardElevation="0dp"
            app:cardBackgroundColor="@color/code_button_background"
            android:foreground="?android:attr/selectableItemBackground">

            <ImageView
                android:id="@+id/iv_share"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:layout_gravity="center"
                android:src="@drawable/ic_share"
                android:contentDescription="分享代码" />

        </androidx.cardview.widget.CardView>

    </LinearLayout>

    <!-- 分割线 -->
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/code_border" />

    <!-- 代码内容区域 -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@color/code_background"
        android:fillViewport="true"
        android:scrollbars="vertical"
        android:fadeScrollbars="false">

        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fillViewport="true"
            android:scrollbars="horizontal"
            android:fadeScrollbars="false">

            <TextView
                android:id="@+id/tv_code_content_fullscreen"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="16dp"
                android:textSize="15sp"
                android:textColor="@color/code_text"
                android:fontFamily="monospace"
                android:lineSpacingMultiplier="1.5"
                android:textIsSelectable="true"
                android:background="@color/code_background" />

        </HorizontalScrollView>

    </ScrollView>

</LinearLayout>
