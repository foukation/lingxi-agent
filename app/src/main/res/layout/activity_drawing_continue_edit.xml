<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:orientation="vertical"
    tools:context="com.fxzs.lingxiagent.view.drawing.DrawingActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <!-- 顶部导航栏 -->
        <RelativeLayout
            android:id="@+id/rl_top_bar"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <ImageView
                android:id="@+id/iv_back"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_centerVertical="true"
                android:layout_marginStart="16dp"
                android:src="@drawable/ic_close_black" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="AI绘画"
                android:textColor="#1E1E1E"
                android:textSize="16sp"
                android:textFontWeight="600" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">
            <androidx.cardview.widget.CardView
                android:id="@+id/cv_reference_image"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"

                android:layout_marginStart="24dp"
                android:layout_marginEnd="24dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="8dp"
                app:cardUseCompatPadding="true"
                android:layout_centerInParent="true"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintVertical_bias="0.5">

                <ImageView
                    android:id="@+id/iv_reference_image"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#D9D9D9"
                    android:scaleType="fitStart"
                    android:adjustViewBounds="true" />
            </androidx.cardview.widget.CardView>
        </RelativeLayout>

        <!-- 图片展示区域 - 使用ConstraintLayout自动适应剩余空间 -->

        <!--    <LinearLayout-->
        <!--        android:layout_width="wrap_content"-->
        <!--        android:layout_height="0dp"-->
        <!--        android:layout_weight="1"/>-->

        <!-- 风格和比例选择区域 - 固定在底部 -->
        <LinearLayout
            android:id="@+id/ll_style_ratio_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="@color/white"
            android:layout_marginStart="11dp"
            android:layout_marginEnd="11dp"
            android:layout_marginBottom="@dimen/dp_24"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:orientation="vertical">

                    <!-- 风格选择 -->
                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/rv_style_real"
                        android:layout_width="match_parent"
                        android:layout_height="100dp"
                        android:orientation="horizontal"
                        android:layout_marginTop="12dp"
                        android:layout_marginStart="12dp"
                        android:clipToPadding="false"
                        android:overScrollMode="never" />
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"
                        android:background="#E0E0E0"
                        android:layout_marginTop="10dp"
                        />
                    <!-- 宽高比选择 -->
                    <HorizontalScrollView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:scrollbars="none"
                        android:clipToPadding="false"
                        android:layout_marginStart="4dp"
                        android:layout_marginEnd="4dp"
                        android:layout_marginTop="12dp"
                        android:layout_marginBottom="12dp"
                        >

                        <LinearLayout
                            android:id="@+id/ll_ratio_container_real"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginStart="4dp"
                            android:layout_marginEnd="4dp">

                            <!-- 9:16 -->
                            <LinearLayout
                                android:id="@+id/ll_ratio_9_16_real"
                                android:layout_width="wrap_content"
                                android:layout_height="32dp"
                                android:orientation="horizontal"
                                android:gravity="center_vertical"
                                android:background="@drawable/bg_ratio_selector"
                                android:paddingStart="8dp"
                                android:paddingEnd="8dp"
                                android:layout_marginEnd="8dp">

                                <View
                                    android:id="@+id/view_ratio_9_16_real"
                                    android:layout_width="16dp"
                                    android:layout_height="16dp"
                                    android:layout_marginEnd="8dp"
                                    android:background="@drawable/draw_rect_9_16"
                                    />

                                <TextView
                                    android:id="@+id/tv_ratio_9_16_real"
                                    android:layout_width="wrap_content"
                                    android:layout_height="20dp"
                                    android:text="9:16"
                                    android:textColor="@color/text_ratio_color_selector"
                                    android:textSize="14dp"
                                    android:gravity="center" />
                            </LinearLayout>

                            <!-- 16:9 -->
                            <LinearLayout
                                android:id="@+id/ll_ratio_16_9_real"
                                android:layout_width="wrap_content"
                                android:layout_height="32dp"
                                android:orientation="horizontal"
                                android:gravity="center_vertical"
                                android:background="@drawable/bg_ratio_selector"
                                android:paddingStart="8dp"
                                android:paddingEnd="8dp"
                                android:layout_marginEnd="8dp">

                                <View
                                    android:id="@+id/view_ratio_16_9_real"
                                    android:layout_width="16dp"
                                    android:layout_height="16dp"
                                    android:layout_marginEnd="8dp"
                                    android:background="@drawable/draw_rect_16_9" />


                                <TextView
                                    android:id="@+id/tv_ratio_16_9_real"
                                    android:layout_width="wrap_content"
                                    android:layout_height="20dp"
                                    android:text="16:9"
                                    android:textColor="@color/text_ratio_color_selector"
                                    android:textSize="14dp"
                                    android:gravity="center" />
                            </LinearLayout>

                            <!-- 4:3 -->
                            <LinearLayout
                                android:id="@+id/ll_ratio_4_3_real"
                                android:layout_width="wrap_content"
                                android:layout_height="32dp"
                                android:orientation="horizontal"
                                android:gravity="center_vertical"
                                android:background="@drawable/bg_ratio_selector"
                                android:paddingStart="8dp"
                                android:paddingEnd="8dp"
                                android:layout_marginEnd="8dp">

                                <View
                                    android:id="@+id/view_ratio_4_3_real"
                                    android:layout_width="16dp"
                                    android:layout_height="16dp"
                                    android:layout_marginEnd="8dp"
                                    android:background="@drawable/draw_rect_4_3" />

                                <TextView
                                    android:id="@+id/tv_ratio_4_3_real"
                                    android:layout_width="wrap_content"
                                    android:layout_height="20dp"
                                    android:text="4:3"
                                    android:textColor="@color/text_ratio_color_selector"
                                    android:textSize="14dp"
                                    android:gravity="center" />
                            </LinearLayout>

                            <!-- 2:3 -->
                            <LinearLayout
                                android:id="@+id/ll_ratio_2_3_real"
                                android:layout_width="wrap_content"
                                android:layout_height="32dp"
                                android:orientation="horizontal"
                                android:gravity="center_vertical"
                                android:background="@drawable/bg_ratio_selector"
                                android:paddingStart="8dp"
                                android:paddingEnd="8dp"
                                android:layout_marginEnd="8dp">

                                <View
                                    android:id="@+id/view_ratio_2_3_real"
                                    android:layout_width="16dp"
                                    android:layout_height="16dp"
                                    android:layout_marginEnd="8dp"
                                    android:background="@drawable/draw_rect_2_3" />


                                <TextView
                                    android:id="@+id/tv_ratio_2_3_real"
                                    android:layout_width="wrap_content"
                                    android:layout_height="20dp"
                                    android:text="2:3"
                                    android:textColor="@color/text_ratio_color_selector"
                                    android:textSize="14dp"
                                    android:gravity="center" />
                            </LinearLayout>

                            <!-- 1:1 -->
                            <LinearLayout
                                android:id="@+id/ll_ratio_1_1_real"
                                android:layout_width="wrap_content"
                                android:layout_height="32dp"
                                android:orientation="horizontal"
                                android:gravity="center_vertical"
                                android:background="@drawable/bg_ratio_selector"
                                android:paddingStart="8dp"
                                android:paddingEnd="8dp"
                                android:layout_marginEnd="8dp">

                                <View
                                    android:id="@+id/view_ratio_1_1_real"
                                    android:layout_width="16dp"
                                    android:layout_height="16dp"
                                    android:layout_marginEnd="8dp"
                                    android:background="@drawable/draw_rect_1_1" />

                                <TextView
                                    android:id="@+id/tv_ratio_1_1_real"
                                    android:layout_width="wrap_content"
                                    android:layout_height="20dp"
                                    android:text="1:1"
                                    android:textColor="@color/text_ratio_color_selector"
                                    android:textSize="14dp"
                                    android:gravity="center" />
                            </LinearLayout>

                        </LinearLayout>
                    </HorizontalScrollView>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="#E0E0E0"/>

                <!-- 底部输入区域 -->
                <LinearLayout
                    android:id="@+id/ll_input_container"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    android:paddingStart="@dimen/dp_12"
                    android:paddingEnd="@dimen/dp_6"
                    android:elevation="8dp"
                    android:gravity="center"
                    android:orientation="vertical"
                    >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        >

                        <EditText
                            android:id="@+id/et_prompt"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:minHeight="54dp"
                            android:maxHeight="120dp"
                            android:paddingTop="13dp"
                            android:paddingBottom="13dp"
                            android:layout_height="wrap_content"
                            android:background="@color/white"
                            android:hint="描述你想要创作的内容..."
                            android:textColorHint="#B2B2B2"
                            android:textColor="#1E1E1E"
                            android:textSize="16sp"
                            android:fontFamily="sans-serif"
                            android:paddingStart="10dp"
                            android:inputType="textMultiLine|textCapSentences"
                            android:maxLines="5"
                            android:scrollbars="vertical" />

                        <ImageView
                            android:id="@+id/iv_voice_input_or_send"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:scaleType="centerCrop"
                            android:src="@drawable/home_voice"
                            android:layout_gravity="center" />

                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_voice"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:minHeight="54dp"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:paddingEnd="@dimen/dp_6"
                    android:paddingStart="@dimen/dp_12"
                    android:visibility="gone"
                    >
                    <ImageView
                        android:id="@+id/iv_logo"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/ic_app_logo"
                        android:visibility="visible"
                        />

                    <TextView
                        android:id="@+id/tv_press"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:text="按住说话"
                        android:textSize="16sp"
                        android:textColor="@color/text_black"
                        android:textFontWeight="600"
                        android:gravity="center"
                        android:visibility="visible"
                        />

                    <ImageView
                        android:id="@+id/iv_keyboard"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/home_voice"
                        android:layout_marginLeft="16dp"
                        android:visibility="visible"
                        android:layout_gravity="center"
                        />


                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>

    <com.fxzs.lingxiagent.view.common.VoiceRecordView
        android:id="@+id/voiceRecordView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:visibility="gone"
        />

