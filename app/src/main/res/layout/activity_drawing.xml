<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.fxzs.lingxiagent.view.drawing.DrawingActivity">

    <!-- 背景渐变层 -->
<!--    <View-->
<!--        android:layout_width="match_parent"-->
<!--        android:layout_height="250dp"-->
<!--        android:layout_alignParentTop="true"-->
<!--        android:background="@drawable/bg_gradient_drawing" />-->

    <!-- 顶部状态栏占位 -->
<!--    <View-->
<!--        android:id="@+id/status_bar_placeholder"-->
<!--        android:layout_width="match_parent"-->
<!--        android:layout_height="44dp"-->
<!--        android:layout_alignParentTop="true" />-->

    <!-- 顶部导航栏 -->
    <RelativeLayout
            android:id="@+id/rl_top_bar"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:layout_below="@id/status_bar_placeholder" tools:ignore="NotSibling">

        <ImageView
            android:id="@+id/iv_back"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_centerVertical="true"
            android:layout_marginStart="16dp"
            android:src="@mipmap/close" />

<!--        <ImageView-->
<!--            android:id="@+id/iv_sound"-->
<!--            android:layout_width="24dp"-->
<!--            android:layout_height="24dp"-->
<!--            android:layout_alignParentEnd="true"-->
<!--            android:layout_centerVertical="true"-->
<!--            android:layout_marginEnd="16dp"-->
<!--            android:src="@drawable/ic_sound_drawing" />-->

    </RelativeLayout>

    <!-- 滚动内容区域 -->
    <ScrollView
        android:id="@+id/sv_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/rl_top_bar"
        android:layout_above="@id/ll_style_ratio_container"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:paddingTop="16dp"
            android:paddingBottom="16dp">

            <!-- 用户提示消息 -->
            <LinearLayout
                android:id="@+id/ll_user_prompt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:background="@drawable/bg_user_prompt_gradient"
                android:padding="16dp"
                android:layout_marginBottom="16dp"
                android:maxWidth="303dp">

                <TextView
                    android:id="@+id/tv_user_prompt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="帮我生成图片：请画一张极其平凡无奇的照片，就像是随手一拍的快照。照片略带运动模糊，主角是橘猫自拍，背景是夜晚下的上海和东方明珠。比例 9:16。"
                    android:textColor="#FFFFFF"
                    android:textSize="16sp"
                    android:lineHeight="24sp" />

            </LinearLayout>

            <!-- AI响应卡片 -->
            <LinearLayout
                android:id="@+id/cv_reference_image"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_response_card"
                android:orientation="vertical"
                android:padding="12dp"
                android:layout_marginTop="16dp"
                android:visibility="gone">

                <!-- 响应文本 -->
                <TextView
                    android:id="@+id/tv_response_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="以下是为你生成的图片:"
                    android:textColor="#1E1E1E"
                    android:textSize="16sp"
                    android:layout_marginBottom="12dp" />

                <!-- 图片和操作按钮容器 -->
                <FrameLayout
                    android:layout_width="180dp"
                    android:layout_height="320dp">

                    <!-- 生成的图片 -->
                    <ImageView
                        android:id="@+id/iv_reference_image"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="#D9D9D9"
                        android:scaleType="centerCrop" />

                    <!-- 继续编辑按钮 -->
                    <TextView
                        android:id="@+id/tv_continue_edit"
                        android:layout_width="wrap_content"
                        android:layout_height="27dp"
                        android:layout_gravity="bottom|end"
                        android:layout_marginEnd="11dp"
                        android:layout_marginBottom="11dp"
                        android:background="@drawable/bg_continue_edit_button"
                        android:gravity="center"
                        android:paddingStart="13dp"
                        android:paddingEnd="13dp"
                        android:text="继续编辑"
                        android:textColor="#FFFFFF"
                        android:textSize="12sp" />

                    <!-- 下载按钮 -->
                    <FrameLayout
                        android:id="@+id/fl_download"
                        android:layout_width="27dp"
                        android:layout_height="27dp"
                        android:layout_gravity="bottom|start"
                        android:layout_marginStart="11dp"
                        android:layout_marginBottom="11dp"
                        android:background="@drawable/bg_continue_edit_button">

                        <ImageView
                            android:layout_width="16dp"
                            android:layout_height="16dp"
                            android:layout_gravity="center"
                            android:src="@drawable/ic_download_drawing" />

                    </FrameLayout>

                </FrameLayout>

                <!-- 分割线 -->
                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:layout_marginTop="16dp"
                    android:layout_marginBottom="16dp"
                    android:background="#E0E0E0" />

                <!-- 操作按钮区域 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <!-- 左侧按钮组 -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="horizontal">

                        <FrameLayout
                            android:id="@+id/fl_copy"
                            android:layout_width="28dp"
                            android:layout_height="28dp"
                            android:layout_marginEnd="16dp"
                            android:background="@drawable/bg_action_button">

                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:src="@drawable/ic_copy_drawing" />

                        </FrameLayout>

                        <FrameLayout
                            android:id="@+id/fl_broadcast"
                            android:layout_width="28dp"
                            android:layout_height="28dp"
                            android:background="@drawable/bg_action_button">

                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:src="@drawable/ic_broadcast_drawing" />

                        </FrameLayout>

                    </LinearLayout>

                    <!-- 右侧刷新按钮 -->
                    <FrameLayout
                        android:id="@+id/fl_refresh"
                        android:layout_width="28dp"
                        android:layout_height="28dp"
                        android:background="@drawable/bg_action_button">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:src="@drawable/ic_refresh_drawing" />

                    </FrameLayout>

                </LinearLayout>

            </LinearLayout>
            
        </LinearLayout>

    </ScrollView>

    <!-- 风格和比例选择区域 -->
    <LinearLayout
        android:id="@+id/ll_style_ratio_container"
        android:layout_width="343dp"
        android:layout_height="174dp"
        android:layout_above="@+id/ll_input_container"
        android:layout_centerHorizontal="true"
        android:orientation="vertical"
        android:background="@drawable/bg_style_ratio_container"
        android:paddingTop="16dp"
        android:paddingBottom="8dp">
        
        <!-- 风格选择 -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_style_real"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:orientation="horizontal"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:clipToPadding="false"
            android:overScrollMode="never" />
            
        <!-- 宽高比选择 -->
        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scrollbars="none"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:clipToPadding="false">
            
            <LinearLayout
                android:id="@+id/ll_ratio_container_real"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                
                <!-- 9:16 -->
                <LinearLayout
                    android:id="@+id/ll_ratio_9_16_real"
                    android:layout_width="wrap_content"
                    android:layout_height="36dp"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:background="@drawable/bg_ratio_selector"
                    android:paddingStart="12dp"
                    android:paddingEnd="16dp"
                    android:layout_marginEnd="12dp">
                    
                    <View
                        android:layout_width="10dp"
                        android:layout_height="18dp"
                        android:layout_marginEnd="8dp"
                        android:background="#D0D0D0" />
                        
                    <TextView
                        android:id="@+id/tv_ratio_9_16_real"
                        android:layout_width="27dp"
                        android:layout_height="20dp"
                        android:text="9:16"
                        android:textColor="@color/text_ratio_color_selector"
                        android:textSize="14dp"
                        android:gravity="center" />
                </LinearLayout>
                
                <!-- 16:9 -->
                <LinearLayout
                    android:id="@+id/ll_ratio_16_9_real"
                    android:layout_width="wrap_content"
                    android:layout_height="36dp"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:background="@drawable/bg_ratio_selector"
                    android:paddingStart="12dp"
                    android:paddingEnd="16dp"
                    android:layout_marginEnd="12dp">
                    
                    <View
                        android:layout_width="18dp"
                        android:layout_height="10dp"
                        android:layout_marginEnd="8dp"
                        android:background="#D0D0D0" />
                        
                    <TextView
                        android:id="@+id/tv_ratio_16_9_real"
                        android:layout_width="27dp"
                        android:layout_height="20dp"
                        android:text="16:9"
                        android:textColor="@color/text_ratio_color_selector"
                        android:textSize="14dp"
                        android:gravity="center" />
                </LinearLayout>
                
                <!-- 4:3 -->
                <LinearLayout
                    android:id="@+id/ll_ratio_4_3_real"
                    android:layout_width="wrap_content"
                    android:layout_height="36dp"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:background="@drawable/bg_ratio_selector"
                    android:paddingStart="12dp"
                    android:paddingEnd="16dp"
                    android:layout_marginEnd="12dp">
                    
                    <View
                        android:layout_width="16dp"
                        android:layout_height="12dp"
                        android:layout_marginEnd="8dp"
                        android:background="#D0D0D0" />
                        
                    <TextView
                        android:id="@+id/tv_ratio_4_3_real"
                        android:layout_width="27dp"
                        android:layout_height="20dp"
                        android:text="4:3"
                        android:textColor="@color/text_ratio_color_selector"
                        android:textSize="14dp"
                        android:gravity="center" />
                </LinearLayout>
                
                <!-- 2:3 -->
                <LinearLayout
                    android:id="@+id/ll_ratio_2_3_real"
                    android:layout_width="wrap_content"
                    android:layout_height="36dp"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:background="@drawable/bg_ratio_selector"
                    android:paddingStart="12dp"
                    android:paddingEnd="16dp"
                    android:layout_marginEnd="12dp">
                    
                    <View
                        android:layout_width="12dp"
                        android:layout_height="18dp"
                        android:layout_marginEnd="8dp"
                        android:background="#D0D0D0" />
                        
                    <TextView
                        android:id="@+id/tv_ratio_2_3_real"
                        android:layout_width="27dp"
                        android:layout_height="20dp"
                        android:text="2:3"
                        android:textColor="@color/text_ratio_color_selector"
                        android:textSize="14dp"
                        android:gravity="center" />
                </LinearLayout>
                
                <!-- 1:1 -->
                <LinearLayout
                    android:id="@+id/ll_ratio_1_1_real"
                    android:layout_width="wrap_content"
                    android:layout_height="36dp"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:background="@drawable/bg_ratio_selector"
                    android:paddingStart="12dp"
                    android:paddingEnd="16dp">
                    
                    <View
                        android:layout_width="18dp"
                        android:layout_height="18dp"
                        android:layout_marginEnd="8dp"
                        android:background="#D0D0D0" />
                        
                    <TextView
                        android:id="@+id/tv_ratio_1_1_real"
                        android:layout_width="27dp"
                        android:layout_height="20dp"
                        android:text="1:1"
                        android:textColor="@color/text_ratio_color_selector"
                        android:textSize="14dp"
                        android:gravity="center" />
                </LinearLayout>
                
            </LinearLayout>
        </HorizontalScrollView>
    </LinearLayout>
    
    <!-- 底部输入区域 -->
    <LinearLayout
        android:id="@+id/ll_input_container"
        android:layout_width="343dp"
        android:layout_height="54dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="20dp"
        android:paddingStart="8dp"
        android:paddingEnd="8dp"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        android:background="@drawable/bg_input_container"
        android:elevation="8dp"
        android:gravity="center">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/bg_input_box">

            <EditText
                android:id="@+id/et_prompt"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@null"
                android:hint="发消息..."
                android:textColorHint="#B2B2B2"
                android:textColor="#1E1E1E"
                android:textSize="16dp"
                 android:paddingStart="16dp"
                android:layout_marginRight="48dp"
                android:paddingTop="8dp"
                android:paddingBottom="8dp"
                android:gravity="center_vertical"
                android:inputType="textMultiLine|textCapSentences"
                android:maxLines="5"
                android:scrollbars="vertical" />

            <ImageView
                android:id="@+id/iv_voice_input_or_send"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_gravity="bottom|end"
                android:layout_marginEnd="6dp"
                android:layout_marginBottom="5dp"
                android:src="@drawable/selector_voice_send" />

        </FrameLayout>

    </LinearLayout>
    
    <!-- 占位视图 -->
    <FrameLayout
        android:id="@+id/fl_initial_state"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:visibility="gone" />
        
    <LinearLayout
        android:id="@+id/rl_text_input_state"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:visibility="gone" />
        
    <LinearLayout
        android:id="@+id/ll_voice_recording_state"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:visibility="gone" />
        
    <LinearLayout
        android:id="@+id/ll_hold_speak_button"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:visibility="gone" />

    <TextView
        android:id="@+id/tv_hold_to_speak"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:visibility="gone" />

    <Button
        android:id="@+id/btn_generate"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:visibility="gone" />
        
    <ImageView
        android:id="@+id/iv_voice_or_keyboard"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:visibility="gone" />
        
    <TextView
        android:id="@+id/tv_voice_hint"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:visibility="gone" />
        
    <com.fxzs.lingxiagent.view.widget.VoiceWaveView
        android:id="@+id/voice_wave_view"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:visibility="gone" />
        
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_style"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:visibility="gone" />
        
    <LinearLayout
        android:id="@+id/ll_ratio_container"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:visibility="gone" />
        
    <LinearLayout
        android:id="@+id/ll_ratio_9_16"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:visibility="gone" />
        
    <TextView
        android:id="@+id/tv_ratio_9_16"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:visibility="gone" />
        
    <LinearLayout
        android:id="@+id/ll_ratio_16_9"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:visibility="gone" />
        
    <TextView
        android:id="@+id/tv_ratio_16_9"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:visibility="gone" />
        
    <LinearLayout
        android:id="@+id/ll_ratio_4_3"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:visibility="gone" />
        
    <TextView
        android:id="@+id/tv_ratio_4_3"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:visibility="gone" />
        
    <LinearLayout
        android:id="@+id/ll_ratio_2_3"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:visibility="gone" />
        
    <TextView
        android:id="@+id/tv_ratio_2_3"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:visibility="gone" />
        
    <LinearLayout
        android:id="@+id/ll_ratio_1_1"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:visibility="gone" />
        
    <TextView
        android:id="@+id/tv_ratio_1_1"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:visibility="gone" />
        
    <LinearLayout
        android:id="@+id/ll_bottom_card"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:visibility="gone" />
    
    <!-- 占位视图 -->
    <ScrollView
        android:id="@+id/sv_overlay_content"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:visibility="gone" />
        
    <LinearLayout
        android:id="@+id/ll_conversation"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:visibility="gone" />
        
    <LinearLayout
        android:id="@+id/ll_bottom_fixed"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:visibility="gone" />
        
    <LinearLayout
        android:id="@+id/ll_ai_writing"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:visibility="gone" />
        
    <LinearLayout
        android:id="@+id/ll_ai_translate"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:visibility="gone" />
        
    <LinearLayout
        android:id="@+id/ll_ppt_generate"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:visibility="gone" />
        
    <EditText
        android:id="@+id/et_message_input"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:visibility="gone" />
        
    <ImageView
        android:id="@+id/iv_voice_bottom"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:visibility="gone" />
        
    <ImageView
        android:id="@+id/iv_add_bottom"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:visibility="gone" />

</RelativeLayout>