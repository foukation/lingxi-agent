<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white">

    <!-- 顶部导航栏 -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <ImageView
            android:id="@+id/iv_back"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_back"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:background="?attr/selectableItemBackgroundBorderless" />

    </RelativeLayout>

    <!-- 内容区域 -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- 描述文本 -->
            <TextView
                android:id="@+id/tv_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="帮我生成图片：清面一张极其平凡无奇的照片，没有明确的主体或构图感，就像是随手拍摄的随手和带运动模糊，主体不明确，光线不足，甚至有点夜晚下的上海和东方明珠。比例 9:16。"
                android:textSize="16sp"
                android:textColor="#333333"
                android:lineSpacingExtra="6dp"
                android:layout_marginBottom="16dp" />

            <!-- 状态标签 -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="16dp">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/ic_check_circle_green"
                    android:layout_marginEnd="8dp" />

                <TextView
                    android:id="@+id/tv_status"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="已保存至相册"
                    android:textSize="14sp"
                    android:textColor="#52C41A" />

            </LinearLayout>

            <!-- 生成的图片 -->
            <androidx.cardview.widget.CardView
                android:id="@+id/cv_generated_image"
                android:layout_width="200dp"
                android:layout_height="356dp"
                android:layout_marginBottom="24dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="0dp">

                <ImageView
                    android:id="@+id/iv_generated_image"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    android:src="@drawable/ic_image_placeholder" />

                <!-- 下载和继续编辑按钮 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:orientation="horizontal"
                    android:background="@drawable/gradient_black_transparent"
                    android:padding="12dp">

                    <LinearLayout
                        android:id="@+id/ll_download"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="horizontal"
                        android:gravity="center"
                        android:background="@drawable/bg_button_rounded_white_alpha"
                        android:padding="8dp">

                        <ImageView
                            android:layout_width="16dp"
                            android:layout_height="16dp"
                            android:src="@drawable/ic_download"
                            android:tint="@color/white"
                            android:layout_marginEnd="4dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="下载"
                            android:textSize="12sp"
                            android:textColor="@color/white" />

                    </LinearLayout>

                    <View
                        android:layout_width="8dp"
                        android:layout_height="0dp" />

                    <LinearLayout
                        android:id="@+id/ll_continue_edit"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="horizontal"
                        android:gravity="center"
                        android:background="@drawable/bg_button_rounded_white_alpha"
                        android:padding="8dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="继续编辑"
                            android:textSize="12sp"
                            android:textColor="@color/white" />

                    </LinearLayout>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <!-- 提示文本 -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="以下是为你生成的图片："
                android:textSize="14sp"
                android:textColor="#666666"
                android:layout_marginBottom="16dp" />

            <!-- 底部操作按钮 -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/iv_sound"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:src="@drawable/ic_volume"
                    android:padding="4dp"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:layout_marginEnd="16dp" />

                <ImageView
                    android:id="@+id/iv_bookmark"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:src="@drawable/ic_bookmark_outline"
                    android:padding="4dp"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:layout_marginEnd="16dp" />

                <ImageView
                    android:id="@+id/iv_refresh"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:src="@drawable/ic_refresh"
                    android:padding="4dp"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:layout_marginEnd="16dp" />

                <ImageView
                    android:id="@+id/iv_more"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:src="@drawable/ic_more_horiz"
                    android:padding="4dp"
                    android:background="?attr/selectableItemBackgroundBorderless" />

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

    <!-- 底部导航栏 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/white"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        android:elevation="4dp">

        <!-- AI 写作 -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:padding="8dp">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_write"
                android:layout_marginBottom="4dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="AI 写作"
                android:textSize="12sp"
                android:textColor="#999999" />

        </LinearLayout>

        <!-- AI 翻译 -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:padding="8dp">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_translate"
                android:layout_marginBottom="4dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="AI 翻译"
                android:textSize="12sp"
                android:textColor="#999999" />

        </LinearLayout>

        <!-- PPT生成 -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:padding="8dp">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_ppt"
                android:layout_marginBottom="4dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="PPT生成"
                android:textSize="12sp"
                android:textColor="#999999" />

        </LinearLayout>

        <!-- AI 绘画 -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:padding="8dp">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_drawing"
                android:tint="@color/primary"
                android:layout_marginBottom="4dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="AI 绘画"
                android:textSize="12sp"
                android:textColor="@color/primary" />

        </LinearLayout>

    </LinearLayout>

    <!-- 底部分享栏 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:orientation="horizontal"
        android:background="#F5F5F5"
        android:paddingStart="24dp"
        android:paddingEnd="24dp"
        android:gravity="center_vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="发消息..."
            android:textSize="14sp"
            android:textColor="#999999"
            android:layout_weight="1" />

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_voice"
            android:layout_marginEnd="20dp" />

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_add_circle"
            android:layout_marginEnd="20dp" />

        <TextView
            android:id="@+id/tv_share"
            android:layout_width="wrap_content"
            android:layout_height="36dp"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:gravity="center"
            android:text="分享"
            android:textSize="14sp"
            android:textColor="@color/white"
            android:background="@drawable/bg_button_rounded_primary" />

    </LinearLayout>

</LinearLayout>