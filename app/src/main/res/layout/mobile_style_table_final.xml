<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/mobile_table_container_bg"
    android:padding="2dp">

    <!-- 水平滚动容器 -->
    <HorizontalScrollView
        android:id="@+id/mobile_table_scroll_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbarStyle="insideOverlay"
        android:scrollbars="horizontal"
        android:fadeScrollbars="false"
        android:scrollbarFadeDuration="3000"
        android:scrollbarSize="4dp"
        android:scrollbarThumbHorizontal="@drawable/mobile_scrollbar_thumb"
        android:overScrollMode="ifContentScrolls"
        android:fillViewport="false">

        <!-- 表格主体 -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- 表格内容 -->
            <TableLayout
                android:id="@+id/mobile_style_table_final"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </LinearLayout>

    </HorizontalScrollView>

</LinearLayout>
