<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="0dp"
    android:layout_marginRight="0dp"
    android:layout_marginTop="8dp"
    android:layout_marginBottom="8dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="1dp"
    app:cardBackgroundColor="@color/code_background"
    app:strokeWidth="1dp"
    app:strokeColor="@color/code_border">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- 代码块头部 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@drawable/bg_code_header"
            android:paddingStart="8dp"
            android:paddingEnd="8dp"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:gravity="center_vertical">

            <!-- 语言图标 -->
            <View
                android:layout_width="8dp"
                android:layout_height="8dp"
                android:background="@drawable/code_language_indicator"
                android:layout_marginEnd="8dp" />

            <!-- 语言标签 -->
            <TextView
                android:id="@+id/tv_language"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="python"
                android:textSize="13sp"
                android:textColor="@color/code_language_text"
                android:fontFamily="monospace"
                android:textStyle="bold"
                android:textAllCaps="true" />

            <!-- 复制按钮 -->
            <androidx.cardview.widget.CardView
                android:id="@+id/cv_copy"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_marginEnd="8dp"
                app:cardCornerRadius="6dp"
                app:cardElevation="0dp"
                app:cardBackgroundColor="@color/code_button_background"
                android:foreground="?android:attr/selectableItemBackground">

                <ImageView
                    android:id="@+id/iv_copy"
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_copy_modern"
                    android:contentDescription="复制代码" />

            </androidx.cardview.widget.CardView>

            <!-- 全屏按钮 -->
            <androidx.cardview.widget.CardView
                android:id="@+id/cv_fullscreen"
                android:layout_width="32dp"
                android:layout_height="32dp"
                app:cardCornerRadius="6dp"
                app:cardElevation="0dp"
                app:cardBackgroundColor="@color/code_button_background"
                android:foreground="?android:attr/selectableItemBackground">

                <ImageView
                    android:id="@+id/iv_fullscreen"
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_fullscreen_modern"
                    android:contentDescription="全屏查看" />

            </androidx.cardview.widget.CardView>

        </LinearLayout>

        <!-- 分割线 -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/code_border" />

        <!-- 代码内容容器 -->
        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scrollbars="horizontal"
            android:fadeScrollbars="false">

            <TextView
                android:id="@+id/tv_code_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="12dp"
                android:textSize="14sp"
                android:textColor="@color/code_text"
                android:fontFamily="monospace"
                android:lineSpacingMultiplier="1.4"
                android:textIsSelectable="true"
                android:maxLines="25"
                android:ellipsize="end"
                android:background="@color/code_background" />

        </HorizontalScrollView>

    </LinearLayout>

</androidx.cardview.widget.CardView>
