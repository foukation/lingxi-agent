<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="#FFFFFF"
    android:elevation="4dp">
    
    <!-- 功能标签区域 -->
    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none"
        android:paddingTop="12dp"
        android:paddingBottom="12dp">
        
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingStart="16dp"
            android:paddingEnd="16dp">
            
            <TextView
                android:id="@+id/tag_same_style"
                android:layout_width="wrap_content"
                android:layout_height="32dp"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:gravity="center"
                android:text="做同款"
                android:textColor="#666666"
                android:textSize="14sp"
                android:background="@drawable/bg_tag_outline"
                android:layout_marginEnd="8dp" />
                
            <TextView
                android:id="@+id/tag_regenerate"
                android:layout_width="wrap_content"
                android:layout_height="32dp"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:gravity="center"
                android:text="重新生成"
                android:textColor="#666666"
                android:textSize="14sp"
                android:background="@drawable/bg_tag_outline"
                android:layout_marginEnd="8dp" />
                
            <TextView
                android:id="@+id/tag_download"
                android:layout_width="wrap_content"
                android:layout_height="32dp"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:gravity="center"
                android:text="下载图片"
                android:textColor="#666666"
                android:textSize="14sp"
                android:background="@drawable/bg_tag_outline"
                android:layout_marginEnd="8dp" />
                
            <TextView
                android:id="@+id/tag_share"
                android:layout_width="wrap_content"
                android:layout_height="32dp"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:gravity="center"
                android:text="分享"
                android:textColor="#666666"
                android:textSize="14sp"
                android:background="@drawable/bg_tag_outline"
                android:layout_marginEnd="8dp" />
                
        </LinearLayout>
    </HorizontalScrollView>
    
    <!-- 分割线 -->
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#F0F0F0" />
    
    <!-- 输入框区域 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="12dp"
        android:gravity="center_vertical">
        
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/bg_input_field"
            android:gravity="center_vertical"
            android:paddingStart="16dp"
            android:paddingEnd="8dp"
            android:paddingTop="8dp"
            android:paddingBottom="8dp">
            
            <EditText
                android:id="@+id/et_result_input"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@null"
                android:hint="发消息"
                android:textColor="#333333"
                android:textColorHint="#999999"
                android:textSize="14sp"
                android:maxLines="3" />
                
            <ImageView
                android:id="@+id/iv_result_voice"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginStart="8dp"
                android:src="@drawable/ic_voice"
                android:tint="#666666"
                android:clickable="true"
                android:focusable="true" />
                
            <ImageView
                android:id="@+id/iv_result_send"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:layout_marginStart="8dp"
                android:background="@drawable/bg_send_button"
                android:padding="8dp"
                android:src="@drawable/ic_send"
                android:tint="#FFFFFF"
                android:clickable="true"
                android:focusable="true" />
                
        </LinearLayout>
        
    </LinearLayout>
    
</LinearLayout>