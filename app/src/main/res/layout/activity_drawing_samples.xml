<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@android:color/white">

    <!-- 顶部Tab栏 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal"
        android:paddingHorizontal="20dp">
        
        <TextView
            android:id="@+id/tab_selected"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="精选"
            android:textSize="16sp"
            android:textColor="#000000"
            android:textStyle="bold"
            android:gravity="center" />
            
        <TextView
            android:id="@+id/tab_portrait"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="人像摄影"
            android:textSize="16sp"
            android:textColor="#999999"
            android:gravity="center" />
            
        <TextView
            android:id="@+id/tab_art"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="艺术"
            android:textSize="16sp"
            android:textColor="#999999"
            android:gravity="center" />
            
        <TextView
            android:id="@+id/tab_chinese_comic"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="国风漫画"
            android:textSize="16sp"
            android:textColor="#999999"
            android:gravity="center" />
            
        <TextView
            android:id="@+id/tab_anime"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="动漫"
            android:textSize="16sp"
            android:textColor="#999999"
            android:gravity="center" />
    </LinearLayout>
    
    <!-- Tab下划线 -->
    <View
        android:id="@+id/tab_indicator"
        android:layout_width="40dp"
        android:layout_height="3dp"
        android:layout_marginStart="40dp"
        android:background="#000000" />

    <!-- 图片网格布局 -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:fillViewport="true">
        
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="10dp">
            
            <!-- 第一行：两张猫图片 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                
                <FrameLayout
                    android:layout_width="0dp"
                    android:layout_height="250dp"
                    android:layout_weight="1"
                    android:layout_margin="5dp">
                    
                    <ImageView
                        android:id="@+id/img_cat_sunglasses"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="centerCrop"
                        android:src="@drawable/sample_cat1" />
                        
                    <TextView
                        android:id="@+id/btn_cat_sunglasses"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom|end"
                        android:layout_margin="10dp"
                        android:text="做同款"
                        android:textColor="@android:color/white"
                        android:textSize="14sp"
                        android:background="#66000000"
                        android:paddingHorizontal="12dp"
                        android:paddingVertical="6dp" />
                </FrameLayout>
                
                <FrameLayout
                    android:layout_width="0dp"
                    android:layout_height="250dp"
                    android:layout_weight="1"
                    android:layout_margin="5dp">
                    
                    <ImageView
                        android:id="@+id/img_cat_city"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="centerCrop"
                        android:src="@drawable/sample_cat2" />
                        
                    <TextView
                        android:id="@+id/btn_cat_city"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom|end"
                        android:layout_margin="10dp"
                        android:text="做同款"
                        android:textColor="@android:color/white"
                        android:textSize="14sp"
                        android:background="#66000000"
                        android:paddingHorizontal="12dp"
                        android:paddingVertical="6dp" />
                </FrameLayout>
            </LinearLayout>
            
            <!-- 第二行：两张人物图片 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                
                <FrameLayout
                    android:layout_width="0dp"
                    android:layout_height="250dp"
                    android:layout_weight="1"
                    android:layout_margin="5dp">
                    
                    <ImageView
                        android:id="@+id/img_girl_student"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="centerCrop"
                        android:src="@drawable/sample_girl1" />
                        
                    <TextView
                        android:id="@+id/btn_girl_student"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom|end"
                        android:layout_margin="10dp"
                        android:text="做同款"
                        android:textColor="@android:color/white"
                        android:textSize="14sp"
                        android:background="#66000000"
                        android:paddingHorizontal="12dp"
                        android:paddingVertical="6dp" />
                </FrameLayout>
                
                <FrameLayout
                    android:layout_width="0dp"
                    android:layout_height="250dp"
                    android:layout_weight="1"
                    android:layout_margin="5dp">
                    
                    <ImageView
                        android:id="@+id/img_girl_portrait"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="centerCrop"
                        android:src="@drawable/sample_girl2" />
                        
                    <TextView
                        android:id="@+id/btn_girl_portrait"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom|end"
                        android:layout_margin="10dp"
                        android:text="做同款"
                        android:textColor="@android:color/white"
                        android:textSize="14sp"
                        android:background="#66000000"
                        android:paddingHorizontal="12dp"
                        android:paddingVertical="6dp" />
                </FrameLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <!-- 按住说话按钮 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:gravity="center"
        android:orientation="vertical">
        
        <TextView
            android:id="@+id/btn_voice_input"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginHorizontal="20dp"
            android:text="按住说话"
            android:textColor="#000000"
            android:textSize="16sp"
            android:gravity="center"
            android:background="@drawable/bg_voice_recording" />
            
        <ImageView
            android:id="@+id/iv_more_horizontal"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginTop="10dp"
            android:src="@drawable/ic_more_horizontal" />
    </LinearLayout>

    <!-- 底部导航栏 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:orientation="horizontal"
        android:background="#FFFFFF"
        android:elevation="8dp"
        android:paddingTop="8dp"
        android:paddingBottom="8dp">
        
        <LinearLayout
            android:id="@+id/nav_chat"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:background="?android:attr/selectableItemBackground">
            
            <ImageView
                android:id="@+id/iv_nav_chat"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_nav_dialog"
                android:tint="@color/text_secondary" />
                
            <TextView
                android:id="@+id/tv_nav_chat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="对话"
                android:textSize="11sp"
                android:textColor="@color/bottom_nav_text_color"
                android:layout_marginTop="2dp" />
        </LinearLayout>
        
        <LinearLayout
            android:id="@+id/nav_agent"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:background="?android:attr/selectableItemBackground">
            
            <ImageView
                android:id="@+id/iv_nav_agent"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_nav_agent"
                android:tint="@color/text_secondary" />
                
            <TextView
                android:id="@+id/tv_nav_agent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="智能体"
                android:textSize="11sp"
                android:textColor="@color/bottom_nav_text_color"
                android:layout_marginTop="2dp" />
        </LinearLayout>
        
        <LinearLayout
            android:id="@+id/nav_drawing"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:background="?android:attr/selectableItemBackground"
            android:clickable="false">
            
            <ImageView
                android:id="@+id/iv_nav_drawing"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/selector_nav_drawing"
                android:tint="@color/text_primary" />
                
            <TextView
                android:id="@+id/tv_nav_drawing"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="绘画"
                android:textSize="11sp"
                android:textColor="@color/text_primary"
                android:textStyle="bold"
                android:layout_marginTop="2dp" />
        </LinearLayout>
        
        <LinearLayout
            android:id="@+id/nav_meeting"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:background="?android:attr/selectableItemBackground">
            
            <ImageView
                android:id="@+id/iv_nav_meeting"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_nav_meeting"
                android:tint="@color/text_secondary" />
                
            <TextView
                android:id="@+id/tv_nav_meeting"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="会议"
                android:textSize="11sp"
                android:textColor="@color/bottom_nav_text_color"
                android:layout_marginTop="2dp" />
        </LinearLayout>
        
        <LinearLayout
            android:id="@+id/nav_user"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:background="?android:attr/selectableItemBackground">
            
            <ImageView
                android:id="@+id/iv_nav_user"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_nav_profile"
                android:tint="@color/text_secondary" />
                
            <TextView
                android:id="@+id/tv_nav_user"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="我的"
                android:textSize="11sp"
                android:textColor="@color/bottom_nav_text_color"
                android:layout_marginTop="2dp" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>