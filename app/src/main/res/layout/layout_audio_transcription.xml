<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <!-- Step Indicator -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="24dp"
        android:gravity="center">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center">

            <TextView
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:background="@drawable/circle_background"
                android:gravity="center"
                android:text="1"
                android:textColor="@color/text_primary"
                android:textSize="16sp"
                android:id="@+id/step1_circle" />

            <TextView
                android:id="@+id/tv_step1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/step1_circle"
                android:layout_marginTop="8dp"
                android:text="选择语言"
                android:textColor="@color/text_primary"
                android:textSize="12sp" />

        </RelativeLayout>

        <View
            android:id="@+id/step_indicator1"
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="1"
            android:background="@color/divider"
            android:layout_marginTop="-24dp" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center">

            <TextView
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:background="@drawable/circle_background_inactive"
                android:gravity="center"
                android:text="2"
                android:textColor="@color/text_hint"
                android:textSize="16sp"
                android:id="@+id/step2_circle" />

            <TextView
                android:id="@+id/tv_step2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/step2_circle"
                android:layout_marginTop="8dp"
                android:text="上传音视频"
                android:textColor="@color/text_hint"
                android:textSize="12sp" />

        </RelativeLayout>

        <View
            android:id="@+id/step_indicator2"
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="1"
            android:background="@color/divider"
            android:layout_marginTop="-24dp" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center">

            <ImageView
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@android:drawable/ic_menu_agenda"
                app:tint="@color/text_hint"
                android:id="@+id/step3_circle" />

            <TextView
                android:id="@+id/tv_step3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/step3_circle"
                android:layout_marginTop="8dp"
                android:text="提交转写"
                android:textColor="@color/text_hint"
                android:textSize="12sp" />

        </RelativeLayout>

    </LinearLayout>

    <!-- Content Area -->
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <!-- Step 1: Language Selection -->
        <ScrollView
            android:id="@+id/layout_select_language"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="选择音频的语言 *"
                    android:textColor="@color/text_primary"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="16dp" />

                <RadioGroup
                    android:id="@+id/rg_language_options"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <!-- Chinese Mandarin -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:background="@android:color/white"
                        android:padding="16dp"
                        android:layout_marginBottom="12dp">

                        <RadioButton
                            android:id="@+id/rb_chinese_mandarin"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:checked="true" />

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:layout_marginStart="12dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="中文普通话"
                                android:textColor="@color/text_primary"
                                android:textSize="16sp"
                                android:textStyle="bold" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="适用于中国大陆地区"
                                android:textColor="@color/text_secondary"
                                android:textSize="14sp"
                                android:layout_marginTop="4dp" />

                        </LinearLayout>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="大陆方言"
                            android:textColor="@color/text_secondary"
                            android:textSize="14sp"
                            android:layout_gravity="center_vertical" />

                    </LinearLayout>

                    <!-- Other language options follow similar pattern -->

                </RadioGroup>

            </LinearLayout>

        </ScrollView>

        <!-- Step 2: Upload File -->
        <LinearLayout
            android:id="@+id/layout_upload_file"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="16dp"
            android:visibility="gone">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="上传音视频文件"
                android:textColor="@color/text_primary"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_marginBottom="16dp" />

            <LinearLayout
                android:id="@+id/btn_upload_file"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:orientation="vertical"
                android:background="@android:color/white"
                android:gravity="center"
                android:layout_marginBottom="16dp">

                <ImageView
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:src="@android:drawable/ic_menu_upload"
                    app:tint="@color/text_secondary" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="点击上传音视频文件"
                    android:textColor="@color/text_secondary"
                    android:textSize="14sp"
                    android:layout_marginTop="8dp" />

            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="支持格式：mp3, wav, mp4, avi等常见音视频格式"
                android:textColor="@color/text_hint"
                android:textSize="12sp" />

        </LinearLayout>

        <!-- Step 3: Transcription Complete -->
        <LinearLayout
            android:id="@+id/layout_transcription_complete"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center"
            android:padding="16dp"
            android:visibility="gone">

            <ImageView
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@android:drawable/ic_dialog_info"
                app:tint="@color/primary" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="转写任务已提交"
                android:textColor="@color/text_primary"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_marginTop="16dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="转写完成后，您将收到通知"
                android:textColor="@color/text_secondary"
                android:textSize="14sp"
                android:layout_marginTop="8dp" />

        </LinearLayout>

    </FrameLayout>

    <!-- Bottom Button -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"
        android:background="@color/white">

        <LinearLayout
            android:id="@+id/btn_transcription"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="#333333"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_transcription_button_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="开始转写"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:textStyle="bold" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>