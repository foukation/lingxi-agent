<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:background="@drawable/bg_dialog_round">


    <ImageView
        android:id="@+id/dialog_iv_enlarge"
        android:layout_width="46dp"
        android:layout_height="46dp"
        android:layout_marginTop="13dp"
        android:layout_marginEnd="10dp"
        android:contentDescription="展开"
        android:gravity="center"
        android:scaleType="centerCrop"
        android:src="@drawable/icon_edit_shrink"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.core.widget.NestedScrollView
        app:layout_constraintTop_toBottomOf="@+id/dialog_iv_enlarge"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:fillViewport="true"
        android:scrollbars="vertical"
        android:overScrollMode="always"
        android:fadeScrollbars="false"
        android:scrollbarThumbVertical="@android:color/darker_gray">
            <androidx.appcompat.widget.AppCompatEditText
                android:id="@+id/dialog_user_input"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="top"
                android:paddingBottom="@dimen/dp_60"
                android:layout_marginEnd="@dimen/dp_16"
                android:background="@color/transparent"
                android:gravity="left|top"
                android:scrollbars="vertical"
                android:overScrollMode="always"
                android:imeOptions="actionSend"
                android:lineSpacingExtra="2dp"
                android:paddingStart="@dimen/dp_16"
                android:textColor="@color/black"
                android:textSize="@dimen/font_16" />
    </androidx.core.widget.NestedScrollView>
    <ImageView
        android:id="@+id/iv_send"
        android:layout_width="@dimen/dp_40"
        android:layout_height="@dimen/dp_40"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="@dimen/dp_20"
        android:contentDescription="展开"
        android:gravity="center"
        android:scaleType="centerCrop"
        android:src="@drawable/home_send"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>