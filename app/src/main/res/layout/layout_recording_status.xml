<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F8F9FA">

    <!-- 中心内容区域 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:orientation="vertical"
        android:gravity="center"
        android:paddingHorizontal="40dp">

        <!-- 麦克风图标和动画 -->
        <FrameLayout
            android:layout_width="160dp"
            android:layout_height="160dp"
            android:layout_marginBottom="32dp">

            <!-- 动画波纹背景 -->
            <View
                android:id="@+id/view_ripple_1"
                android:layout_width="160dp"
                android:layout_height="160dp"
                android:background="@drawable/circle_ripple"
                android:alpha="0.2" />

            <View
                android:id="@+id/view_ripple_2"
                android:layout_width="130dp"
                android:layout_height="130dp"
                android:layout_gravity="center"
                android:background="@drawable/circle_ripple"
                android:alpha="0.4" />

            <View
                android:id="@+id/view_ripple_3"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_gravity="center"
                android:background="@drawable/circle_ripple"
                android:alpha="0.6" />

            <!-- 麦克风图标 -->
            <ImageView
                android:id="@+id/iv_microphone"
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:layout_gravity="center"
                android:src="@drawable/ic_microphone" />

        </FrameLayout>

        <!-- 录音状态文字 -->
        <TextView
            android:id="@+id/tv_recording_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="正在录音..."
            android:textColor="#1F2937"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_marginBottom="16dp" />

        <!-- 录音时长 -->
        <TextView
            android:id="@+id/tv_recording_duration"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="00:00:00"
            android:textColor="#6B7280"
            android:textSize="16sp"
            android:layout_marginBottom="24dp" />

        <!-- 实时转写文本预览 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@android:color/white"
            android:padding="20dp"
            android:elevation="2dp"
            android:layout_marginBottom="40dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="实时转写"
                android:textColor="#1F2937"
                android:textSize="14sp"
                android:textStyle="bold"
                android:layout_marginBottom="8dp" />

            <TextView
                android:id="@+id/tv_realtime_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="正在等待语音输入..."
                android:textColor="#6B7280"
                android:textSize="14sp"
                android:minHeight="60dp"
                android:gravity="top"
                android:maxLines="4" />

        </LinearLayout>

    </LinearLayout>

    <!-- 底部按钮区域 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        android:padding="20dp"
        android:background="@color/white"
        android:elevation="4dp">

        <!-- 暂停会议按钮 -->
        <LinearLayout
            android:id="@+id/btn_pause_meeting"
            android:layout_width="0dp"
            android:layout_height="56dp"
            android:layout_weight="1"
            android:layout_marginEnd="12dp"
            android:background="#F3F4F6"
            android:gravity="center"
            android:orientation="horizontal"
            android:elevation="2dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="暂停会议"
                android:textColor="#374151"
                android:textSize="16sp"
                android:textStyle="bold" />

        </LinearLayout>

        <!-- 结束会议按钮 -->
        <LinearLayout
            android:id="@+id/btn_end_meeting"
            android:layout_width="0dp"
            android:layout_height="56dp"
            android:layout_weight="1"
            android:layout_marginStart="12dp"
            android:background="#EF4444"
            android:gravity="center"
            android:orientation="horizontal"
            android:elevation="2dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="结束会议"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:textStyle="bold" />

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>