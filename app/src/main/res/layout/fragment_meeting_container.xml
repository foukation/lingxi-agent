<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >

    <!-- Top Navigation Bar with Integrated Tab Navigation -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Top Row: Back Button, Title, Actions -->
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <!-- Back Button -->
            <ImageView
                android:id="@+id/iv_back"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="13dp"
                android:src="@drawable/icon_back"
                android:background="?attr/selectableItemBackgroundBorderless" />

            <!-- Meeting Title -->
            <TextView
                android:id="@+id/tv_meeting_title"
                android:layout_width="wrap_content"
                android:layout_height="22dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="14dp"
                android:text="20250106日15:20会议"
                android:textColor="#1E1E1E"
                android:textSize="16sp"
                android:gravity="center" />

            <!-- Top Action Buttons -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:layout_marginEnd="16dp"
                android:layout_marginTop="13dp"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <!-- Export Button -->
                <ImageView
                    android:id="@+id/iv_export"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/icon_export"
                    android:background="?attr/selectableItemBackgroundBorderless" />

            </LinearLayout>

        </FrameLayout>

        <!-- Tab Navigation - Integrated in Top Navigation Bar -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_marginStart="16dp">

            <!-- Tab Container with exact Figma positioning -->
            <LinearLayout
                android:id="@+id/tab_container"
                android:layout_width="wrap_content"
                android:layout_height="22dp"
                android:orientation="horizontal"
                android:gravity="bottom">

                <TextView
                    android:id="@+id/tab_content"
                    android:layout_width="wrap_content"
                    android:layout_height="22dp"
                    android:layout_marginEnd="20dp"
                    android:text="会议内容"
                    android:textColor="#1E1E1E"
                    android:textSize="16sp"
                    android:gravity="center_vertical"
                    android:clickable="true"
                    android:focusable="true" />

                <TextView
                    android:id="@+id/tab_summary"
                    android:layout_width="wrap_content"
                    android:layout_height="22dp"
                    android:layout_marginEnd="20dp"
                    android:text="会议摘要"
                    android:textColor="#999999"
                    android:textSize="16sp"
                    android:gravity="center_vertical"
                    android:clickable="true"
                    android:focusable="true"  />

                <TextView
                    android:id="@+id/tab_topics"
                    android:layout_width="wrap_content"
                    android:layout_height="22dp"
                    android:layout_marginEnd="20dp"
                    android:text="会议话题"
                    android:textColor="#999999"
                    android:textSize="16sp"
                    android:gravity="center_vertical"
                    android:clickable="true"
                    android:focusable="true"  />

                <TextView
                    android:id="@+id/tab_qa"
                    android:layout_width="wrap_content"
                    android:layout_height="22dp"
                    android:text="智能问答"
                    android:textColor="#999999"
                    android:textSize="16sp"
                   android:gravity="center_vertical"
                    android:clickable="true"
                    android:focusable="true"  />

            </LinearLayout>

            <!-- Tab Indicator - positioned exactly as in Figma CSS -->
            <View
                android:id="@+id/tab_indicator"
                android:layout_width="32dp"
                android:layout_height="2dp"
                android:layout_below="@id/tab_container"
                android:layout_marginTop="7dp"
                android:layout_marginStart="0dp"
                android:background="@color/tab_indicator" />

        </RelativeLayout>

    </LinearLayout>

    <!-- Tab Navigation is now integrated in Top Navigation Bar above -->

    <!-- Main Content Area - adjusted for integrated tab navigation -->
<!--    <ScrollView-->
<!--        android:layout_width="match_parent"-->
<!--        android:layout_height="0dp"-->
<!--        android:layout_weight="1"-->
<!--        android:fillViewport="true">-->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Content container for child fragments -->
            <FrameLayout
                android:id="@+id/fragment_container"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

        </LinearLayout>

<!--    </ScrollView>-->

</LinearLayout>