<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="319dp"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_update_dialog"
    android:orientation="vertical">

    <!-- 顶部蓝色背景区域 -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="@drawable/bg_update_dialog_top">

        <!-- 警告图标 -->
        <ImageView
            android:id="@+id/iv_warning"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginStart="24dp"
            android:layout_marginTop="24dp"
            android:src="@drawable/ic_warning" />

        <!-- 版本升级标题 -->
        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="24dp"
            android:layout_toEndOf="@id/iv_warning"
            android:text="版本升级"
            android:textColor="#000000"
            android:textSize="20sp"
            android:textStyle="bold" />

        <!-- 新版本图标 -->
        <ImageView
            android:id="@+id/iv_new_version"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="24dp"
            android:layout_marginTop="10dp"
            android:src="@drawable/ic_new_version_vector" />
    </RelativeLayout>

    <!-- 版本信息文本 -->
    <TextView
        android:id="@+id/tv_version_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:layout_marginTop="16dp"
        android:text="发现新版本1.0.123，新版本大小18.2MB，是否确定升级？"
        android:textColor="#1E88E5"
        android:textSize="16sp"
        android:lineHeight="24dp" />

    <!-- 按钮容器 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:layout_marginBottom="24dp"
        android:gravity="center"
        android:orientation="horizontal">

        <!-- 下次再说按钮 -->
        <TextView
            android:id="@+id/btn_cancel"
            android:layout_width="128dp"
            android:layout_height="40dp"
            android:layout_marginEnd="12dp"
            android:background="@drawable/bg_button_cancel"
            android:gravity="center"
            android:text="下次再说"
            android:textColor="#000000"
            android:textSize="16sp"
            android:fontFamily="sans-serif"
            android:textFontWeight="400"
            android:lineHeight="24dp" />

        <!-- 立即更新按钮 -->
        <TextView
            android:id="@+id/btn_update"
            android:layout_width="128dp"
            android:layout_height="40dp"
            android:layout_marginStart="12dp"
            android:background="@drawable/bg_button_update"
            android:gravity="center"
            android:text="立即更新"
            android:textColor="#FFFFFF"
            android:textSize="16sp"
            android:fontFamily="sans-serif"
            android:textFontWeight="400"
            android:lineHeight="24dp" />
    </LinearLayout>
</LinearLayout>