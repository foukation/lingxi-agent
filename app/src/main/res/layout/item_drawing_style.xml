<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginRight="7dp">
    <androidx.cardview.widget.CardView
        android:id="@+id/ll_style_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center"

        app:cardCornerRadius="16dp"
        app:cardElevation="0dp">
        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center">

                <ImageView
                    android:id="@+id/iv_style_image"
                    android:layout_width="70dp"
                    android:layout_height="92dp"
                    android:scaleType="centerCrop"
                    android:background="@drawable/bg_style_image_rounded"
                    android:src="@drawable/ic_image_placeholder" />

<!--                <TextView-->
<!--                    android:id="@+id/tv_style_name"-->
<!--                    android:layout_width="wrap_content"-->
<!--                    android:layout_height="wrap_content"-->
<!--                    android:layout_marginTop="8dp"-->
<!--                    android:text="写实"-->
<!--                    android:textColor="#333333"-->
<!--                    android:textSize="10sp"-->
<!--                    android:maxWidth="48dp"-->
<!--                    android:maxLines="2"-->
<!--                    android:ellipsize="end"-->
<!--                    android:gravity="center"-->
<!--                    android:lineSpacingExtra="1dp"-->
<!--                    android:visibility="visible"-->
<!--                    />-->

            </LinearLayout>

            <!-- 选中标记 -->
            <FrameLayout
                android:id="@+id/fl_check_mark"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:layout_gravity="top|end"
                android:layout_marginTop="6dp"
                android:layout_marginEnd="6dp"
                android:background="@drawable/bg_check_circle"
                android:visibility="gone">

                <ImageView
                    android:layout_width="12dp"
                    android:layout_height="12dp"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_check_white" />

            </FrameLayout>
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:background="@drawable/drawing_style_bg"
                android:layout_gravity="center_horizontal|bottom"
                android:visibility="visible"
                />
            <TextView
                android:id="@+id/tv_style_name"
                android:layout_width="wrap_content"
                android:maxWidth="70dp"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:text="智能推荐"
                android:textSize="11sp"
                android:textColor="#FFFFFF"
                android:layout_gravity="center_horizontal|bottom"
                android:layout_marginBottom="8dp"
                android:shadowDx="1"
                android:shadowDy="1"
                android:shadowColor="@color/text_gray"
                />
        </FrameLayout>
    </androidx.cardview.widget.CardView>

</FrameLayout>