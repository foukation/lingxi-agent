<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <!-- Fragment容器 -->
    <FrameLayout
        android:id="@+id/fragment_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/bottom_navigation"
        android:fitsSystemWindows="true" />

    <!-- 底部导航栏容器 -->
    <FrameLayout
        android:id="@+id/bottom_navigation"
        android:layout_width="match_parent"
        android:layout_height="71dp"
        android:layout_alignParentBottom="true"
        android:background="@drawable/ic_tab_background">
        
        <!-- 导航栏内容 -->
        <LinearLayout
            android:id="@+id/bottomNavigation"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:paddingTop="7dp"
            android:paddingBottom="10dp">

            <!-- gui -->
            <LinearLayout
                android:id="@+id/nav_tab_gui"
                android:layout_width="0dp"
                android:layout_height="44dp"
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:clickable="true"
                android:focusable="true"
                android:visibility="gone">

                <ImageView
                    android:id="@+id/iv_nav_tab_gui"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_marginTop="4dp"
                    android:src="@drawable/selector_tab_gui" />

                <TextView
                    android:id="@+id/tv_nav_tab_gui"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="GUI"
                    android:textColor="@color/nav_text_color"
                    android:textSize="10sp"
                    android:layout_marginTop="2dp" />
            </LinearLayout>

            <!-- AI通话 -->
            <LinearLayout
                android:id="@+id/nav_tab_phone"
                android:layout_width="0dp"
                android:layout_height="44dp"
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:clickable="true"
                android:focusable="true"
                android:visibility="gone">

                <ImageView
                    android:id="@+id/iv_nav_tab_phone"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_marginTop="4dp"
                    android:src="@drawable/selector_tab_phone" />

                <TextView
                    android:id="@+id/tv_nav_tab_phone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="AI通话"
                    android:textColor="@color/nav_text_color"
                    android:textSize="10sp"
                    android:layout_marginTop="2dp" />

            </LinearLayout>
            <!-- 会议 -->
            <LinearLayout
                android:id="@+id/nav_tab_job"
                android:layout_width="0dp"
                android:layout_height="44dp"
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:clickable="true"
                android:focusable="true">

                <ImageView
                    android:id="@+id/iv_nav_tab_job"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_marginTop="4dp"
                    android:src="@drawable/selector_tab_job" />

                <TextView
                    android:id="@+id/tv_nav_tab_job"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="AI办公"
                    android:textColor="@color/nav_text_color"
                    android:textSize="10sp"
                    android:layout_marginTop="2dp" />

            </LinearLayout>
            <!-- linxgxi -->
            <LinearLayout
                android:id="@+id/nav_tab_lingxi"
                android:layout_width="0dp"
                android:layout_height="64dp"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center"
                android:clickable="true"
                android:focusable="true">

                <ImageView
                    android:id="@+id/iv_nav_lingxi"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_tab_chat_selected" />

            </LinearLayout>

            <!-- 智能体 -->
            <LinearLayout
                android:id="@+id/nav_tab_agent"
                android:layout_width="0dp"
                android:layout_height="44dp"
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:clickable="true"
                android:focusable="true">

                <ImageView
                    android:id="@+id/iv_nav_tab_agent"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_marginTop="4dp"
                    android:src="@drawable/selector_tab_agent" />

                <TextView
                    android:id="@+id/tv_nav_tab_agent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="智能体"
                    android:textColor="@color/nav_text_color"
                    android:textSize="10sp"
                    android:layout_marginTop="2dp" />

            </LinearLayout>

        </LinearLayout>
    </FrameLayout>

</RelativeLayout>