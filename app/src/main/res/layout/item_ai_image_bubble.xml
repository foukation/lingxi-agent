<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_margin="16dp">

    <!-- 气泡内容容器 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/bg_f7_r16"
        android:padding="16dp">

            <!-- 文字说明 -->
            <TextView
                android:id="@+id/tv_message"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="以下是为你生成的图片："
                android:textColor="#1E1E1E"
                android:textSize="16sp"
                android:lineSpacingExtra="4dp"
                android:layout_marginBottom="12dp" />

            <!-- 图片容器 -->
            <androidx.cardview.widget.CardView
                android:id="@+id/cv_image_container"
                android:layout_width="180dp"
                android:layout_height="320dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="0dp"
                android:layout_marginBottom="12dp">

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <!-- 生成的图片 -->
                    <ImageView
                        android:id="@+id/iv_generated_image"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="centerCrop"
                        android:background="#F5F5F5" />

                    <!-- 图片尺寸标签 -->
                    <TextView
                        android:id="@+id/tv_image_size"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="top|end"
                        android:layout_margin="8dp"
                        android:background="@drawable/bg_size_label"
                        android:paddingStart="8dp"
                        android:paddingEnd="8dp"
                        android:paddingTop="4dp"
                        android:paddingBottom="4dp"
                        android:text="512 × 768"
                        android:textColor="#FFFFFF"
                        android:textSize="12sp"
                        android:textStyle="bold" />

                    <!-- 下载按钮 -->
                    <ImageView
                        android:id="@+id/ll_overlay_download"
                        android:layout_width="27dp"
                        android:layout_height="27dp"
                        android:layout_gravity="bottom|start"
                        android:layout_marginStart="11dp"
                        android:layout_marginBottom="11dp"
                        android:src="@drawable/ic_download"
                        android:background="@drawable/bg_download_overlay"
                        android:paddingTop="10dp"
                        android:paddingEnd="13dp"
                        android:paddingBottom="10dp"
                        android:paddingStart="13dp"
                        android:tint="#FFFFFF"
                        android:scaleType="center" />

                    <!-- 继续编辑按钮 -->
                    <TextView
                        android:id="@+id/ll_overlay_edit"
                        android:layout_width="74dp"
                        android:layout_height="27dp"
                        android:layout_gravity="bottom|end"
                        android:layout_marginEnd="11dp"
                        android:layout_marginBottom="11dp"
                        android:background="@drawable/bg_continue_edit_overlay"
                        android:gravity="center"
                        android:text="继续编辑"
                        android:textColor="#FFFFFF"
                        android:textSize="12sp"
                        android:textStyle="normal"
                        android:fontFamily="sans-serif-medium" />

                    <!-- 加载进度指示器 -->
                    <ProgressBar
                        android:id="@+id/pb_loading"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_gravity="center"
                        android:indeterminateTint="#FFFFFF"
                        android:visibility="gone" />

                </FrameLayout>

            </androidx.cardview.widget.CardView>

            <!-- 操作按钮区域 -->
            <LinearLayout
                android:id="@+id/ll_actions"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="10dp">

                <!-- 分隔线 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#E0E0E0" />

                <!-- 按钮行 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="10dp">

                    <!-- 复制按钮 -->
                    <ImageView
                        android:id="@+id/iv_copy"
                        android:layout_width="28dp"
                        android:layout_height="28dp"
                        android:src="@mipmap/chat_copy"
                        android:background="?android:attr/selectableItemBackgroundBorderless"
                        android:padding="2dp" />

                    <!-- 重新生成按钮 -->
                    <ImageView
                        android:id="@+id/iv_regenerate"
                        android:layout_width="28dp"
                        android:layout_height="28dp"
                        android:src="@drawable/ic_refresh"
                        android:background="?android:attr/selectableItemBackgroundBorderless"
                        android:layout_marginStart="10dp"
                        android:padding="2dp" />

                    <!-- 占位空间 -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content" />

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

</LinearLayout>
