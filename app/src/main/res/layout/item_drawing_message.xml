<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingStart="16dp"
    android:paddingEnd="16dp"
    android:paddingTop="8dp"
    android:layout_marginBottom="14dp"
    android:paddingBottom="8dp">
    
    <!-- 用户消息（描述） -->
    <TextView
        android:id="@+id/tv_user_message"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp"
        android:padding="12dp"
        android:background="@drawable/bg_message_user"
        android:textColor="#333333"
        android:textSize="15sp"
        android:visibility="gone" />
    
    <!-- AI回复容器 -->
    <LinearLayout
        android:id="@+id/ll_ai_message"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="gone">
        
        <!-- AI文字回复 -->
        <TextView
            android:id="@+id/tv_ai_message"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:padding="12dp"
            android:background="@drawable/bg_message_ai"
            android:textColor="#333333"
            android:textSize="15sp"
            android:visibility="gone" />
        
        <!-- 生成进度容器 -->
        <LinearLayout
            android:id="@+id/ll_progress"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:orientation="vertical"
            android:gravity="center"
            android:background="@drawable/bg_gradient_purple_pink"
            android:visibility="gone"
            android:layout_marginBottom="8dp">

            <FrameLayout
                android:layout_width="60dp"
                android:layout_height="40dp"
                android:layout_marginBottom="16dp">
                
                <!-- 大星星 -->
                <ImageView
                    android:id="@+id/iv_sparkle_big"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:layout_gravity="bottom|start"
                    android:src="@drawable/ic_star_white" />
                
                <!-- 小星星 -->
                <ImageView
                    android:id="@+id/iv_sparkle_small"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_gravity="top|end"
                    android:src="@drawable/ic_star_white" />
                
            </FrameLayout>

            <TextView
                android:id="@+id/tv_progress_percentage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0%"
                android:textColor="#FFFFFF"
                android:textSize="32sp"
                android:textStyle="bold" />

            <ProgressBar
                android:id="@+id/progress_bar"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="150dp"
                android:layout_height="4dp"
                android:layout_marginTop="12dp"
                android:max="100"
                android:progress="0"
                android:progressDrawable="@drawable/bg_progress_white"
                android:background="#33FFFFFF" />

        </LinearLayout>
        
        <!-- 图片结果容器 -->
        <androidx.cardview.widget.CardView
            android:id="@+id/cv_image"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="8dp"
            app:cardElevation="0dp"
            android:visibility="gone"
            android:layout_marginBottom="8dp">
            
            <ImageView
                android:id="@+id/iv_generated_image"
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:scaleType="centerCrop"
                android:adjustViewBounds="true" />
                
        </androidx.cardview.widget.CardView>
        
        <!-- 操作按钮 -->
        <LinearLayout
            android:id="@+id/ll_actions"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:visibility="gone">
            
            <ImageButton
                android:id="@+id/btn_download"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:padding="8dp"
                android:src="@drawable/ic_download"
                android:background="@drawable/bg_circle_selector"
                android:layout_marginEnd="12dp" />
                
            <TextView
                android:id="@+id/tv_continue_edit"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:gravity="center"
                android:text="继续编辑"
                android:textColor="#666666"
                android:textSize="14sp"
                android:background="@drawable/bg_button_outline" />
                
        </LinearLayout>
        
    </LinearLayout>
    
</LinearLayout>