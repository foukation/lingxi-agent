            android:gravity="center_horizontal"
            android:padding="16dp"
            android:background="@drawable/bg_white_radius_16"
            android:layout_margin="12dp"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:layout_marginBottom="10dp"
                android:orientation="horizontal">


                <ImageView
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:background="@drawable/ai_work_drawing_icon"
                    android:layout_marginRight="8dp"
                    />
                <TextView
                    android:id="@+id/tv_title"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="20250416日08:00的会议"
                    android:textSize="16sp"
                    android:fontFamily="sans-serif-medium"
                    android:textFontWeight="600"
                    android:textColor="@color/figma_text_primary"
                    android:singleLine="true"
                    android:ellipsize="end"
                    android:layout_centerHorizontal="true"/>
                <ImageView
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:background="@drawable/ai_work_more"
                    />
            </LinearLayout>


