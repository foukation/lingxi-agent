<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:id="@+id/root_view"
    android:padding="12dp"
    android:layout_margin="16dp"
    android:gravity="start"
    android:background="@drawable/bg_f7_r16"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="以下是为你生成的图片："
            android:textSize="16sp"
            android:textColor="@color/text_hint_color"
            android:layout_marginBottom="10dp"
            />

        <RelativeLayout
            android:layout_width="180dp"
            android:layout_height="320dp">

            <androidx.cardview.widget.CardView
                android:id="@+id/card_iv_drawing"
                android:layout_width="180dp"
                android:layout_height="320dp"
                app:cardCornerRadius="8dp"
                app:cardElevation="0dp"
                app:cardBackgroundColor="@android:color/transparent">

                <ImageView
                    android:id="@+id/iv_drawing"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    android:background="@android:color/transparent"/>
            </androidx.cardview.widget.CardView>
            <LinearLayout
                android:id="@+id/rl_progress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:orientation="vertical"
                android:gravity="center_horizontal"
                >
                <TextView
                    android:id="@+id/tv_progress"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="50dp"
                    android:text="0%"
                    android:textSize="16sp"
                    android:textColor="@color/white"
                    android:layout_marginBottom="10dp"
                    />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_actions_drawing"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_margin="10dp"
                android:visibility="visible"
                android:layout_alignParentBottom="true"
                android:gravity="center_vertical"
                >
                <RelativeLayout
                    android:id="@+id/iv_chat_draw_download"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_1e40_r16">

                    <ImageView
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                         android:layout_margin="6dp"
                        android:background="@drawable/draw_download"
                        />
                </RelativeLayout>

                <ImageView
                    android:id="@+id/iv_chat_draw_continue"
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:background="@drawable/drawing_edit"
                    android:layout_marginLeft="16dp"
                    />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"/>

                <ImageView
                    android:id="@+id/iv_chat_refresh"
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:background="@drawable/drawing_refresh"
                    android:layout_marginLeft="16dp"
                    />

<!--                <TextView-->
<!--                    android:id="@+id/iv_chat_draw_continue"-->
<!--                    android:layout_width="wrap_content"-->
<!--                    android:layout_height="wrap_content"-->
<!--                    android:text="继续编辑"-->
<!--                    android:textColor="@color/white"-->
<!--                    android:paddingLeft="13dp"-->
<!--                    android:paddingRight="13dp"-->
<!--                    android:paddingTop="5dp"-->
<!--                    android:paddingBottom="5dp"-->
<!--                    android:gravity="center"-->
<!--                    android:background="@drawable/bg_1e40_r16"-->
<!--                    />-->
            </LinearLayout>
        </RelativeLayout>

        <LinearLayout
            android:id="@+id/ll_actions"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="10dp"
            android:visibility="gone"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#E0E0E0"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="10dp"
                >
                <ImageView
                    android:id="@+id/iv_chat_copy"
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:background="@mipmap/chat_copy"
                    />

                <ImageView
                    android:id="@+id/iv_chat_play"
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:background="@mipmap/chat_play"
                    android:layout_marginLeft="10dp"
                    android:visibility="gone"
                    />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content">

                </LinearLayout>
<!--                <ImageView-->
<!--                    android:id="@+id/iv_chat_refresh"-->
<!--                    android:layout_width="28dp"-->
<!--                    android:layout_height="28dp"-->
<!--                    android:background="@mipmap/chat_refresh"-->
<!--                    android:layout_marginLeft="10dp"-->
<!--                    />-->
                <ImageView
                    android:id="@+id/iv_chat_export"
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:background="@mipmap/chat_export"
                    android:layout_marginLeft="10dp"
                    android:visibility="gone"
                    />
            </LinearLayout>


        </LinearLayout>
    </LinearLayout>


</LinearLayout>
