<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <!-- 用户消息容器 -->
    <FrameLayout
        android:id="@+id/user_message_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="48dp"
        android:paddingEnd="16dp"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        android:visibility="gone">
        
        <com.fxzs.lingxiagent.view.common.UserInputDisplayView
            android:id="@+id/user_input_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end" />
            
    </FrameLayout>

    <!-- AI消息容器 -->
    <LinearLayout
        android:id="@+id/ai_message_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="16dp"
        android:paddingEnd="48dp"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        android:visibility="gone">
        
        <com.fxzs.lingxiagent.view.common.AIResponseView
            android:id="@+id/ai_response_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
            
    </LinearLayout>

</LinearLayout>