<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingTop="12dp"
    android:paddingBottom="4dp">

    <!-- 分类标题行 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/trip_hotel_img"
            android:layout_width="12dp"
            android:layout_height="12dp"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_hotel_blue" />

        <TextView
            android:id="@+id/category_title"
            android:layout_width="0dp"
            android:layout_height="20dp"
            android:layout_weight="1"
            android:textSize="12sp"
            android:layout_marginStart="4dp"
            android:text="性价比之选"
            android:textColor="#1C77FF"/>

        <TextView
            android:id="@+id/more_button"
            android:layout_width="44dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="47dp"
            android:text="更多   >"
            android:textColor="#7A7A7A"
            android:textSize="12sp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:orientation="horizontal"
        android:layout_marginTop="4dp"
        android:background="@drawable/card_background">

        <ImageView
            android:id="@+id/trip_item_img"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:scaleType="centerCrop"
            android:src="@drawable/rest" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="80dp"
            android:layout_weight="1"
            android:orientation="vertical"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:paddingTop="6dp"
            android:paddingBottom="6dp"
            tools:ignore="RtlSymmetry">

            <TextView
                android:id="@+id/trip_item_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLines="2"
                android:ellipsize="end"
                android:text="北京天坛东门亚朵酒店（北京天坛公园店）"
                android:textColor="#1E1E1E"
                android:textSize="14sp"
                />
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/trip_item_score"
                    android:layout_width="24dp"
                    android:layout_height="12dp"
                    android:gravity="center"
                    android:text="4.7"
                    android:background="@drawable/item_score_rectangle"
                    android:textColor="@color/white"
                    android:textSize="9sp" />

                <TextView
                    android:id="@+id/trip_item_tag_one"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/item_hotel_tag_rectangle"
                    android:layout_marginStart="4dp"
                    android:paddingStart="4dp"
                    android:paddingEnd="4dp"
                    android:text="免费洗车"
                    android:textColor="#ff288dde"
                    android:textSize="8sp" />

                <TextView
                    android:id="@+id/trip_item_tag_two"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/item_hotel_tag_rectangle"
                    android:layout_marginStart="4dp"
                    android:paddingStart="4dp"
                    android:paddingEnd="4dp"
                    android:text="洗衣房"
                    android:textColor="#ff288dde"
                    android:textSize="8sp" />

                <TextView
                    android:id="@+id/trip_item_tag_three"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/item_hotel_tag_rectangle"
                    android:layout_marginStart="4dp"
                    android:paddingStart="4dp"
                    android:paddingEnd="4dp"
                    android:text="健身房"
                    android:textColor="#ff288dde"
                    android:textSize="8sp" />
            </LinearLayout>

            <TextView
                android:id="@+id/trip_item_address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:maxLines="1"
                android:ellipsize="end"
                android:text="工业路233号福州苏宁广场A区第4层406A406B号商铺第4层406A406B号商铺"
                android:textColor="#ff999999"
                android:textSize="12sp"/>

        </LinearLayout>

    </LinearLayout>
</LinearLayout>