<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/bg_feedback_history_item"
    android:padding="20dp"
    android:layout_marginBottom="12dp"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?android:attr/selectableItemBackground">

    <!-- 反馈内容 -->
    <TextView
        android:id="@+id/tv_feedback_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="鼠标点击了没有反应。不知道是什么问题？"
        android:textColor="#1F2937"
        android:textSize="16sp"
        android:lineSpacingExtra="6dp"
        android:fontFamily="sans-serif"
        android:letterSpacing="0.01"
        android:maxLines="3"
        android:ellipsize="end" />

    <!-- 图片预览区域 -->
    <HorizontalScrollView
        android:id="@+id/layout_images"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:scrollbars="none"
        android:visibility="gone">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_image1"
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:layout_marginEnd="12dp"
                android:scaleType="centerCrop"
                android:background="@drawable/bg_feedback_image"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/iv_image2"
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:layout_marginEnd="12dp"
                android:scaleType="centerCrop"
                android:background="@drawable/bg_feedback_image"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/iv_image3"
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:layout_marginEnd="12dp"
                android:scaleType="centerCrop"
                android:background="@drawable/bg_feedback_image"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/iv_image4"
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:scaleType="centerCrop"
                android:background="@drawable/bg_feedback_image"
                android:visibility="gone" />
        </LinearLayout>
    </HorizontalScrollView>

    <!-- 时间 -->
    <TextView
        android:id="@+id/tv_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="2025-4-11"
        android:textColor="#9CA3AF"
        android:textSize="14sp"
        android:fontFamily="sans-serif" />

</LinearLayout>