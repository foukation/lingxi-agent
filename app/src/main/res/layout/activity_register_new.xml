<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <!-- 顶部返回按钮 -->
    <ImageView
        android:id="@+id/iv_back"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="17dp"
        android:src="@drawable/ic_nav_back"
        android:background="?android:attr/selectableItemBackgroundBorderless" />

    <!-- 右上角注册文字 -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="17dp"
        android:text="注册账号"
        android:textColor="#1E1E1E"
        android:textSize="16sp"
        android:background="?android:attr/selectableItemBackgroundBorderless"
        android:gravity="center_vertical" />

    <!-- 主要内容区域 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="149dp"
        android:orientation="vertical"
        android:paddingStart="34dp"
        android:paddingEnd="34dp">

        <!-- 手机号输入框 -->
        <EditText
            android:id="@+id/et_phone"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:hint="请输入手机号"
            android:inputType="phone"
            android:textSize="14sp"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:background="@drawable/bg_edittext_round_white"
            android:textColor="#1E1E1E"
            android:textColorHint="#B2B2B2" />

        <!-- 验证码输入框 -->
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginTop="20dp">

            <EditText
                android:id="@+id/et_verification"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:hint="请输入验证码"
                android:inputType="number"
                android:textSize="14sp"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:background="@drawable/bg_edittext_round_white"
                android:textColor="#1E1E1E"
                android:textColorHint="#B2B2B2" />

            <TextView
                android:id="@+id/tv_get_code"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end|center_vertical"
                android:layout_marginEnd="10dp"
                android:text="获取验证码"
                android:textColor="#1E1E1E"
                android:textSize="12sp"
                android:gravity="center"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:paddingTop="6dp"
                android:paddingBottom="6dp"
                android:background="@drawable/bg_get_code" />
        </FrameLayout>

        <!-- 密码输入框 -->
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginTop="20dp">

            <EditText
                android:id="@+id/et_password"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:hint="请输入密码"
                android:inputType="textPassword"
                android:textSize="14sp"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:background="@drawable/bg_edittext_round_white"
                android:textColor="#1E1E1E"
                android:textColorHint="#B2B2B2" />

            <ImageView
                android:id="@+id/iv_toggle_password"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:layout_gravity="end|center_vertical"
                android:layout_marginEnd="16dp"
                android:src="@drawable/selector_password_visibility"
                android:background="?android:attr/selectableItemBackgroundBorderless" />
        </FrameLayout>

        <!-- 注册按钮 -->
        <Button
            android:id="@+id/btn_register"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginTop="40dp"
            android:text="注册"
            android:textColor="@android:color/white"
            android:textSize="16sp"
            android:background="@drawable/bg_register_button"
            android:enabled="false"
            android:alpha="0.4" />

        <!-- 协议勾选 -->
        <LinearLayout
            android:layout_width="252dp"
            android:layout_height="40dp"
            android:orientation="vertical"
            android:gravity="center_vertical"
            android:layout_marginTop="23dp"
            android:layout_gravity="center_horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <CheckBox
                    android:id="@+id/cb_agreement"
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:layout_marginEnd="8dp"
                    android:button="@drawable/selector_checkbox_white"
                    android:checked="false" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="登录即同意"
                    android:textColor="#B2B2B2"
                    android:textSize="12sp"
                    android:textStyle="normal"
                    android:lineHeight="20sp" />
                <TextView
                    android:id="@+id/tv_yidong"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="中国移动认证服务条款"
                    android:textColor="#999999"
                    android:textSize="12sp"
                    android:textStyle="normal"
                    android:lineHeight="20sp" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="，灵犀的"
                    android:textColor="#B2B2B2"
                    android:textSize="12sp"
                    android:textStyle="normal"
                    android:lineHeight="20sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginStart="24dp">

                <TextView
                    android:id="@+id/tv_user_agreement"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="使用协议"
                    android:textColor="#999999"
                    android:textSize="12sp"
                    android:textStyle="normal"
                    android:background="?android:attr/selectableItemBackgroundBorderless"
                    android:padding="2dp"
                    android:lineHeight="20sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="和"
                    android:textColor="#B2B2B2"
                    android:textSize="12sp"
                    android:textStyle="normal"
                    android:lineHeight="20sp" />

                <TextView
                    android:id="@+id/tv_privacy_policy"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="隐私政策"
                    android:textColor="#999999"
                    android:textSize="12sp"
                    android:textStyle="normal"
                    android:background="?android:attr/selectableItemBackgroundBorderless"
                    android:padding="2dp"
                    android:lineHeight="20sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="并使用本机号码登录"
                    android:textColor="#B2B2B2"
                    android:textSize="12sp"
                    android:textStyle="normal"
                    android:lineHeight="20sp" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <!-- 进度条 -->
    <ProgressBar
        android:id="@+id/progressBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:visibility="gone" />

</FrameLayout>