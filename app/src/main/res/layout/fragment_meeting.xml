<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >


    <!-- 顶部栏 -->
    <RelativeLayout
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/iv_back"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_centerVertical="true"
            android:padding="14dp"
            android:src="@drawable/ic_arrow_back"
            android:background="?android:attr/selectableItemBackgroundBorderless"
            android:contentDescription="@string/back"
            android:visibility="gone"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="会议"
            android:textColor="#1E1E1E"
            android:textSize="16sp"
            android:textStyle="normal"
            android:fontWeight="500" />

        <ImageView
            android:id="@+id/iv_history"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:padding="12dp"
            android:visibility="invisible"
            android:src="@drawable/ic_history"
            android:contentDescription="@string/history" />

    </RelativeLayout>

    <!-- Tab Background Container with Figma Gradient -->
<!--    <FrameLayout-->
<!--        android:id="@+id/tab_background_container"-->
<!--        android:layout_width="match_parent"-->
<!--        android:layout_height="wrap_content"-->
<!--        android:layout_marginTop="25dp">-->

<!--  -->

<!--    </FrameLayout>-->
    <!-- Main Title Group Container -->
    <LinearLayout
        android:id="@+id/title_group_container"
        android:layout_width="wrap_content"
        android:layout_height="37dp"
        android:layout_marginStart="34dp"
        android:layout_marginTop="16dp"
        android:orientation="horizontal">

        <!-- AI实时会议 Title -->
        <LinearLayout
            android:id="@+id/tab_realtime_container"
            android:layout_width="wrap_content"
            android:layout_height="37dp"
            android:layout_marginEnd="16dp"
            android:orientation="vertical"
            android:clickable="true"
            android:focusable="true">

            <TextView
                android:id="@+id/tab_realtime"
                android:layout_width="wrap_content"
                android:layout_height="28dp"
                android:text="AI实时会议"
                android:textColor="@color/figma_text_primary"
                android:textSize="20sp"
                android:textStyle="bold"
                android:gravity="start" />

            <!-- Tab Indicator -->
            <View
                android:id="@+id/tab_indicator"
                android:layout_width="38dp"
                android:layout_height="3dp"
                android:layout_marginStart="27dp"
                android:layout_marginTop="6dp"
                android:background="@color/figma_text_primary"
                android:visibility="visible" />

        </LinearLayout>

        <!-- Audio Transcription Title -->
        <LinearLayout
            android:id="@+id/tab_transcription_container"
            android:layout_width="wrap_content"
            android:layout_height="37dp"
            android:orientation="vertical"
            android:clickable="true"
            android:focusable="true">

            <TextView
                android:id="@+id/tab_audio_file"
                android:layout_width="wrap_content"
                android:layout_height="28dp"
                android:text="音视频转写"
                android:textColor="@color/figma_text_secondary"
                android:textSize="20sp"
                android:textStyle="normal"
                android:gravity="start" />

            <!-- Second Tab Indicator -->
            <View
                android:id="@+id/tab_indicator_second"
                android:layout_width="38dp"
                android:layout_height="3dp"
                android:layout_marginStart="27dp"
                android:layout_marginTop="6dp"
                android:background="@color/figma_text_primary"
                android:visibility="gone" />

        </LinearLayout>

    </LinearLayout>

    <!-- Fragment Container for Tab Content -->
    <FrameLayout
        android:id="@+id/fragment_container"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />



</LinearLayout>