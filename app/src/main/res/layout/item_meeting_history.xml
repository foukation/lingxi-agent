<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@android:color/white">

    <!-- 会议历史记录条目 -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:background="?android:attr/selectableItemBackground">

        <!-- 会议图标 -->
        <ImageView
            android:id="@+id/ivMeetingIcon"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_nav_meeting"
            android:background="@drawable/bg_circle_ai_avatar"
            android:padding="8dp"
            android:scaleType="centerInside" />

        <!-- 会议信息容器 -->
        <LinearLayout
            android:id="@+id/llMeetingInfo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/ivMeetingIcon"
            android:layout_toStartOf="@id/ivMoreOptions"
            android:layout_centerVertical="true"
            android:layout_marginStart="12dp"
            android:layout_marginEnd="12dp"
            android:orientation="vertical">

            <!-- 会议标题 -->
            <TextView
                android:id="@+id/tvMeetingTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="AI实时会议"
                android:textColor="@color/text_black"
                android:textSize="16sp"
                android:textStyle="bold"
                android:maxLines="1"
                android:ellipsize="end" />

            <!-- 会议时间 -->
            <TextView
                android:id="@+id/tvMeetingTime"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="2025年01月23日 14:30"
                android:textColor="@color/text_hint_color"
                android:textSize="12sp"
                android:maxLines="1"
                android:ellipsize="end" />

            <!-- 会议内容摘要 -->
            <TextView
                android:id="@+id/tvMeetingContent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="会议内容摘要..."
                android:textColor="@color/text_hint_color"
                android:textSize="14sp"
                android:maxLines="2"
                android:ellipsize="end" />

        </LinearLayout>

        <!-- 更多选项按钮 -->
        <ImageView
            android:id="@+id/ivMoreOptions"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_more_dots"
            android:background="?android:attr/selectableItemBackgroundBorderless"
            android:padding="4dp"
            android:scaleType="centerInside" />

    </RelativeLayout>

    <!-- 分割线 -->
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginStart="68dp"
        android:background="@color/divider_color" />

</LinearLayout>
