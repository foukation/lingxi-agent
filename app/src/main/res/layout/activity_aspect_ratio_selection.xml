<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:fitsSystemWindows="true">

    <!-- 顶部栏 -->
    <RelativeLayout
        android:id="@+id/rl_top_bar"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="#FFFFFF"
        android:paddingStart="16dp"
        android:paddingEnd="16dp">

        <ImageView
            android:id="@+id/iv_back"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_centerVertical="true"
            android:layout_alignParentStart="true"
            android:padding="12dp"
            android:src="@drawable/ic_arrow_back"
            android:tint="#333333"
            android:background="?android:attr/selectableItemBackgroundBorderless" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="AI绘画"
            android:textColor="#1E1E1E"
            android:textSize="16sp"/>
    </RelativeLayout>

    <!-- 风格选择 -->
    <LinearLayout
        android:id="@+id/ll_styles"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/rl_top_bar"
        android:background="#FAFAFA"
        android:paddingTop="12dp"
        android:paddingBottom="12dp">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_styles"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:clipToPadding="false" />
    </LinearLayout>

    <!-- 比例选择标题 -->
    <TextView
        android:id="@+id/tv_ratio_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/ll_styles"
        android:layout_marginStart="16dp"
        android:layout_marginTop="20dp"
        android:text="选择比例"
        android:textColor="#333333"
        android:textSize="16sp"
        android:textStyle="bold" />

    <!-- 比例选项网格 -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_ratios"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_ratio_title"
        android:layout_marginTop="16dp"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:clipToPadding="false" />

    <!-- 底部输入区域 -->
    <LinearLayout
        android:id="@+id/ll_bottom_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@drawable/bg_white_top_shadow"
        android:orientation="vertical"
        android:paddingTop="16dp"
        android:paddingBottom="16dp"
        android:paddingStart="16dp"
        android:paddingEnd="16dp">

        <!-- 输入框容器 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_input_field"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingStart="16dp"
            android:paddingEnd="8dp"
            android:paddingTop="8dp"
            android:paddingBottom="8dp">

            <EditText
                android:id="@+id/et_prompt"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@null"
                android:hint="请输入图片描述"
                android:maxLines="3"
                android:textColor="#333333"
                android:textColorHint="#999999"
                android:textSize="14sp" />

            <ImageView
                android:id="@+id/iv_voice"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginStart="8dp"
                android:src="@drawable/ic_voice"
                android:clickable="true"
                android:focusable="true" app:tint="#666666"/>

            <ImageView
                android:id="@+id/iv_send"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:layout_marginStart="8dp"
                android:background="@drawable/bg_send_button"
                android:padding="8dp"
                android:src="@drawable/ic_send"
                android:clickable="true"
                android:focusable="true" app:tint="#FFFFFF"/>
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>