<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/transparent">


    <LinearLayout
        android:id="@+id/ll_bottom_edit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        card_view:cardBackgroundColor="#FFFFFF"
        android:layout_centerInParent="true"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="8dp"
        >

        <!--    <LinearLayout-->
        <!--        android:id="@+id/ll_bottom_edit"-->
        <!--        android:layout_width="match_parent"-->
        <!--        android:layout_height="wrap_content"-->
        <!--        android:orientation="vertical"-->
        <!--        android:paddingTop="6dp"-->
        <!--        android:paddingBottom="6dp"-->
        <!--        android:paddingLeft="16dp"-->
        <!--        android:paddingRight="10dp"-->
        <!--        >-->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <LinearLayout
                android:id="@+id/ll_files"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone"
                >

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rv_file"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:layout_marginLeft="8dp"
                    android:layout_marginTop="16dp"/>
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rv_quick_prompt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:layout_marginLeft="8dp"
                    android:layout_marginBottom="12dp"
                    />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="#E0E0E0"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:maxHeight="192dp"
                android:minHeight="52dp"
                >

                <LinearLayout
                    android:id="@+id/ll_edit"
                    android:visibility="gone"
                    android:layout_width="0dp"
                    android:layout_weight="1"                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="vertical">

                    <EditText
                        android:id="@+id/ed"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@null"
                        android:hint="发消息..."
                        android:minHeight="52dp"
                        android:imeOptions="actionSend"
                        android:inputType="textMultiLine"
                        android:maxHeight="192dp"
                        android:textColor="@color/text_black"
                        android:textColorHint="@color/text_hint_color"
                        android:textSize="@dimen/font_16"
                        android:paddingStart="@dimen/dp_16"
                        android:paddingTop="@dimen/dp_14"
                        android:paddingBottom="@dimen/dp_14"/>

                </LinearLayout>
                <ImageView
                    android:id="@+id/iv_logo"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/ic_app_logo"
                    android:visibility="gone"
                    android:layout_marginLeft="8dp"
                    />

                <TextView
                    android:id="@+id/tv_press"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="52dp"
                    android:text="按住说话"
                    android:textSize="16sp"
                    android:textColor="@color/text_black"
                    android:textFontWeight="600"
                    android:gravity="center"
                    android:visibility="gone"
                    />

                <TextView
                    android:id="@+id/tv_ed_fake"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:maxHeight="192dp"
                    android:background="@null"
                    android:text="发消息..."
                    android:minHeight="52dp"
                    android:textColor="@color/text_hint_color"
                    android:textSize="16sp"
                    android:visibility="visible"
                    android:paddingTop="14dp"
                    android:paddingBottom="14dp"
                    android:paddingLeft="16dp"


                    />
                <LinearLayout
                    android:id="@+id/ll_functions"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:visibility="gone"
                    android:paddingBottom="14dp"
                    android:paddingLeft="16dp"
                    >

                    <LinearLayout
                        android:visibility="gone"
                        android:id="@+id/ll_mode"
                        android:layout_width="wrap_content"
                        android:layout_height="28dp"
                        android:background="@drawable/bg_light_blue_r16"
                        android:gravity="center_vertical"
                        >
                        <TextView
                            android:id="@+id/tv_mode"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=""
                            android:textSize="12sp"
                            android:textColor="@color/text_blue"
                            android:layout_gravity="center"
                            />
                        <ImageView
                            android:layout_width="16dp"
                            android:layout_height="16dp"
                            android:background="@mipmap/home_down_arrow"
                            />


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/bg_light_grey_r16"
                        android:gravity="center_vertical"
                        android:layout_marginLeft="8dp"
                        android:visibility="gone"
                        >
                        <ImageView
                            android:layout_width="16dp"
                            android:layout_height="16dp"
                            android:background="@mipmap/home_link"
                            />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="联网"
                            android:textSize="12sp"
                            android:textColor="@color/text_black"
                            android:layout_marginLeft="4dp"
                            android:layout_gravity="center"
                            />



                    </LinearLayout>


                </LinearLayout>
                <ImageView
                    android:id="@+id/iv_voice"
                    android:layout_width="@dimen/dp_40"
                    android:layout_height="@dimen/dp_40"
                    android:scaleType="centerCrop"
                    android:src="@drawable/home_voice"
                    android:layout_marginLeft="16dp"

                    />
                <ImageView
                    android:id="@+id/iv_keyboard"
                    android:layout_width="@dimen/dp_40"
                    android:layout_height="@dimen/dp_40"
                    android:scaleType="centerCrop"
                    android:background="@drawable/home_keyboard"
                    android:layout_marginLeft="16dp"
                    android:visibility="gone"
                    />
                <ImageView
                    android:id="@+id/iv_add"
                    android:layout_width="@dimen/dp_40"
                    android:layout_height="@dimen/dp_40"
                    android:scaleType="centerCrop"
                    android:src="@drawable/home_add"
                    android:visibility="visible"
                    />
                <LinearLayout
                    android:id="@+id/ll_expand"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:minHeight="52dp"
                    android:gravity="center">

                    <ImageView
                        android:id="@+id/iv_edit_open"
                        android:layout_width="@dimen/dp_40"
                        android:layout_height="@dimen/dp_40"
                        android:scaleType="centerCrop"
                        android:layout_marginEnd="4dp"
                        android:src="@drawable/chat_edit_open"
                        android:visibility="gone"
                        />
                    <LinearLayout
                        android:id="@+id/iv_edit_open_expand"
                        android:layout_width="wrap_content"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:visibility="gone"
                        />

                    <ImageView
                        android:id="@+id/iv_send"
                        android:layout_width="@dimen/dp_40"
                        android:layout_height="@dimen/dp_40"
                        android:scaleType="centerCrop"
                        android:src="@drawable/home_send"
                        android:visibility="gone"
                        />

                </LinearLayout>
            </LinearLayout>

        </LinearLayout>

<!--    </LinearLayout>-->
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_bottom_voice"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:orientation="vertical">
        <TextView
            android:id="@+id/tv_voice_hint"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="松手发送，上移取消"
            android:textSize="12sp"
            android:textColor="#7F7F7F"
            android:textFontWeight="600"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="8dp"
            />
        <RelativeLayout
            android:id="@+id/rl_voice"
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginBottom="8dp"
            android:background="@drawable/bg_voice_blue_r20"
            >

            <ImageView
                android:id="@+id/iv_bottom_voice"
                android:layout_width="match_parent"
                android:layout_height="6dp"
                android:background="@mipmap/voice_wave"
                android:visibility="visible"
                />
        </RelativeLayout>


    </LinearLayout>
</LinearLayout>
